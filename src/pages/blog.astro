---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// R√©cup√©rer tous les articles du blog
const allPosts = await getCollection('blog');

// Trier par date de publication (plus r√©cent en premier)
const posts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// R√©cup√©rer toutes les cat√©gories uniques
const categories = [...new Set(posts.map(post => post.data.category))];

// Param√®tres de recherche et filtrage (pour l'instant statiques)
const searchQuery = '';
const selectedCategory = 'Tous les articles';
---

<Layout 
  title="Insights & Strat√©gies - Sonny Court" 
  description="D√©couvre les derni√®res avanc√©es en neurosciences et d√©veloppement personnel pour transformer ta vie."
>
  <div class="blog-page">
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="hero-content">
        <h1>Insights & Strat√©gies</h1>
        <p class="hero-subtitle">
          D√©couvre les derni√®res avanc√©es en neurosciences et d√©veloppement personnel pour transformer ta vie.
        </p>
      </div>
    </section>

    <!-- Search and Filters Section -->
    <section class="search-filters">
      <div class="container">
        <div class="search-bar" id="searchBar">
          <svg class="search-icon" id="searchIcon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          </svg>
          <input type="text" placeholder="Rechercher un article, un sujet..." class="search-input" id="searchInput">
          <div class="search-results" id="searchResults"></div>
        </div>
        
        <div class="category-filters">
          <button class="filter-btn active" data-category="all">Tous les articles</button>
          {categories.map(category => (
            <button class="filter-btn" data-category={category}>{category}</button>
          ))}
        </div>
      </div>
    </section>

    <!-- Articles Section -->
    <section class="articles-section">
      <div class="container">
        {posts.length > 0 ? (
          <div class="articles-grid" id="articlesGrid">
            {posts.map((post) => (
              <article class="article-card" data-category={post.data.category} data-title={post.data.title.toLowerCase()} data-description={post.data.description.toLowerCase()}>
                <a href={`/blog/${post.slug}`} class="article-link">
                  <div class="article-image">
                    {post.data.heroImage ? (
                      <img src={post.data.heroImage} alt={post.data.title} />
                    ) : (
                      <div class="image-placeholder">
                        <svg width="60" height="60" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                        </svg>
                      </div>
                    )}
                  </div>
                  <div class="article-content">
                    <div class="article-meta">
                      <span class="category-tag">{post.data.category}</span>
                      <span class="date">{post.data.pubDate.toLocaleDateString('fr-FR', { day: '2-digit', month: 'long', year: 'numeric' })}</span>
                    </div>
                    <h2 class="article-title">{post.data.title}</h2>
                    <div class="article-footer">
                      <div class="author">
                        <div class="author-avatar">
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                          </svg>
                        </div>
                        <span class="author-name">{post.data.author}</span>
                      </div>
                      <div class="read-more">
                        Lire ‚Üí
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="no-articles">
            <div class="no-articles-icon">
              <svg width="80" height="80" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
              </svg>
