    <script>
        // ===== PARTICULES FLOTTANTES =====
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 20;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // Position et timing aléatoires
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 25 + 's';
                particle.style.animationDuration = (Math.random() * 15 + 20) + 's';
                
                particlesContainer.appendChild(particle);
            }
        }

        // ===== EFFET PARALLAXE =====
        function initParallax() {
            // Désactiver seulement le parallaxe sur mobile, garder le reste
            if (window.innerWidth <= 768) {
                return;
            }
            
            document.addEventListener('mousemove', (e) => {
                const mouseX = e.clientX / window.innerWidth - 0.5;
                const mouseY = e.clientY / window.innerHeight - 0.5;
                
                // Déplacement du container
                const container = document.querySelector('.container');
                if (container) {
                    container.style.transform = `translateX(${mouseX * 10}px) translateY(${mouseY * 10}px)`;
                }
                
                // Déplacement des orbes
                const orbs = document.querySelectorAll('.orb');
                orbs.forEach((orb, index) => {
                    const speed = (index + 1) * 0.3;
                    orb.style.transform = `translateX(${mouseX * 30 * speed}px) translateY(${mouseY * 30 * speed}px)`;
                });
            });
        }

        // ===== GESTION DU POPUP =====
        function openPopup() {
            document.getElementById('custom-popup').style.display = 'block';
            // NE JAMAIS TOUCHER au scroll du body
            
            // Effet sonore (optionnel)
            playPopupSound();
        }
        
        function closePopup() {
            document.getElementById('custom-popup').style.display = 'none';
            // NE JAMAIS TOUCHER au scroll du body - il reste libre
        }
        
        function playPopupSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                // Configuration du son
                oscillator.frequency.setValueAtTime(800, audioContext.currentTime);
                oscillator.frequency.exponentialRampToValueAtTime(1200, audioContext.currentTime + 0.1);
                
                gainNode.gain.setValueAtTime(0, audioContext.currentTime);
                gainNode.gain.linearRampToValueAtTime(0.3, audioContext.currentTime + 0.05);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.3);
            } catch (e) {
                // Ignorer les erreurs audio
                console.log('Audio non disponible');
            }
        }

        // ===== GESTION DES DEUX ÉTAPES =====
        let currentEmail = '';
        let currentName = '';

        function handleStep1() {
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            
            if (!name || !email) {
                alert('Veuillez remplir tous les champs');
                return;
            }
            
            // Validation email basique
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                alert('Veuillez entrer un email valide');
                return;
            }
            
            // Sauvegarder les données
            currentName = name;
            currentEmail = email;
            
            // Envoyer immédiatement à MailerLite
            sendToMailerLite(name, email, '');
            
            // Passer à l'étape 2
            document.getElementById('step1-form').style.display = 'none';
            document.getElementById('step2-form').style.display = 'block';
            
            // Initialiser le champ téléphone
            initPhoneInput();
        }

        function handleStep2() {
            const phoneInput = document.getElementById('phone');
            const phoneFormattedInput = document.getElementById('phone_formatted');
            
            // Validation du téléphone
            if (!phoneInput.value.trim()) {
                alert('Veuillez entrer votre numéro de téléphone');
                phoneInput.focus();
                return;
            }
            
            // Récupérer le numéro formaté
            if (window.iti && window.iti.isValidNumber()) {
                const formattedPhone = window.iti.getNumber();
                phoneFormattedInput.value = formattedPhone;
                
                // Envoyer tout (prénom + email + téléphone) à MailerLite
                updateMailerLiteContact(currentName, currentEmail, formattedPhone);
            } else {
                alert('Veuillez entrer un numéro de téléphone valide');
                phoneInput.focus();
                return;
            }
        }

        function sendToMailerLite(name, email, phone) {
            // Créer un formulaire temporaire pour l'envoi
            const formData = new FormData();
            formData.append('name', name);
            formData.append('email', email);
            formData.append('phone', phone);
            formData.append('step', '1');
            
            fetch('/process-optin-test.php', {
                method: 'POST',
                body: formData
            })
            .then(response => response.text())
            .then(data => {
                console.log('Contact ajouté à MailerLite:', data);
            })
            .catch(error => {
                console.error('Erreur lors de l\'ajout à MailerLite:', error);
            });
        }

        function updateMailerLiteContact(name, email, phone) {
            const formData = new FormData();
            formData.append('name', name);
            formData.append('email', email);
            formData.append('phone', phone);
            formData.append('step', '2');
            
            fetch('/process-optin-test.php', {
                method: 'POST',
                body: formData
            })
            .then(response => response.text())
            .then(data => {
                console.log('Contact complet ajouté à MailerLite:', data);
                // Fermer le popup et rediriger
                closePopup();
                redirectToVideo();
            })
            .catch(error => {
                console.error('Erreur lors de l\'ajout complet:', error);
                alert('Erreur: ' + error);
            });
        }

        function redirectToVideo() {
            // Rediriger vers la vidéo (remplace par ton URL)
            window.location.href = '/video-gratuite-manifest/';
        }

        // ===== EVENT LISTENERS =====
        function initEventListeners() {
            // Bouton principal
            const popupTrigger = document.querySelector('.popup-trigger');
            if (popupTrigger) {
                popupTrigger.addEventListener('click', function(e) {
                    e.preventDefault();
                    openPopup();
                });
            }

            // Boutons des étapes
            const step1Button = document.getElementById('step1-button');
            if (step1Button) {
                step1Button.addEventListener('click', handleStep1);
            }

            const step2Button = document.getElementById('step2-button');
            if (step2Button) {
                step2Button.addEventListener('click', handleStep2);
            }

            // Fermer en cliquant à l'extérieur
            const customPopup = document.getElementById('custom-popup');
            if (customPopup) {
                customPopup.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closePopup();
                    }
                });
            }

            // Fermer avec Échap
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closePopup();
                }
            });
        }

        // ===== INITIALISATION =====
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            initParallax();
            initEventListeners();
            
            // FORCER le scroll mobile
            if (window.innerWidth <= 768) {
                document.body.style.overflow = 'auto';
                document.body.style.overflowY = 'auto';
                document.body.style.height = 'auto';
                document.documentElement.style.overflow = 'auto';
                document.documentElement.style.overflowY = 'auto';
                document.documentElement.style.height = 'auto';
            }
        });

        // Note: Ce formulaire envoie les données à process-optin-test.php
        // qui ajoute le contact à MailerLite et redirige vers la vidéo
    </script>

    <script>
    function initPhoneInput() {
        const phoneInput = document.querySelector("#phone");
        const phoneFormattedInput = document.querySelector("#phone_formatted");
        
        if (phoneInput) {
            window.iti = window.intlTelInput(phoneInput, {
                initialCountry: "auto",
                geoIpLookup: function(callback) {
                    fetch('https://ipapi.co/json/')
                        .then(res => res.json())
                        .then(data => callback(data.country_code))
                        .catch(() => callback('fr'));
                },
                preferredCountries: ['fr', 'ch', 'be', 'ca'],
                separateDialCode: true,
                utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/utils.js"
            });

            // Mise à jour du champ caché quand le numéro change
            function updateHiddenField() {
                if (phoneInput.value.trim() && window.iti.isValidNumber()) {
                    phoneFormattedInput.value = window.iti.getNumber();
                } else {
                    phoneFormattedInput.value = '';
                }
            }

            phoneInput.addEventListener('change', updateHiddenField);
            phoneInput.addEventListener('keyup', updateHiddenField);
        }
    }
    </script>
