        // Token Verification & 24h Countdown
        (function() {
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token') || '';
            
            // Vérifier d'abord s'il y a un timer de 5 jours depuis l'inscription
            const timerStart = localStorage.getItem('pack_complet_timer_start');
            const timerEnd = localStorage.getItem('pack_complet_timer_end');
            
            // Mode preview : désactiver la vérification du token
            const url = new URL(window.location.href);
            const isPreview = url.searchParams.has('preview');
            const isPreviewExpired = url.searchParams.has('preview_expired');
            
            // Si pas en mode preview, vérifier le timer de 5 jours
            if (!isPreview && !isPreviewExpired && timerStart && timerEnd) {
                const startTimeNum = parseInt(timerStart, 10);
                const endTimeNum = parseInt(timerEnd, 10);
                const now = Date.now();
                
                // Vérifier si le timer est encore valide (pas expiré)
                if (now < endTimeNum) {
                    console.log('⏰ Utilisation du timer de 5 jours depuis l\'inscription');
                    
                    function updateCountdown(): void {
                        const currentTime = Date.now();
                        const remaining = endTimeNum - currentTime;
                        
                        if (remaining <= 0) {
                            updateAllDisplays(0, 0, 0);
                            return;
                        }
                        
                        // Convertir en secondes puis calculer heures, minutes, secondes
                        const totalSeconds = Math.floor(remaining / 1000);
                        const totalHours = Math.floor(totalSeconds / 3600);
                        const minutes = Math.floor((totalSeconds % 3600) / 60);
                        const seconds = totalSeconds % 60;
                        
                        // updateAllDisplays attend (hours, minutes, seconds)
                        updateAllDisplays(totalHours, minutes, seconds);
                    }
                    
                    updateCountdown();
                    setInterval(updateCountdown, 1000);
                    return;
                } else {
                    console.log('⚠️ Timer de 5 jours expiré, passage au système de token');
                    // Nettoyer les anciens timers expirés
                    localStorage.removeItem('pack_complet_timer_start');
                    localStorage.removeItem('pack_complet_timer_end');
                }
            }
            
            if (isPreviewExpired) {
                console.log('🔍 Mode preview expired activé - simulation token expiré');
                // Simuler un token expiré
                updateAllDisplays(0, 0, 0);
                return;
            }
            
            if (isPreview) {
                console.log('🔍 Mode preview activé - vérification du token désactivée');
                // Utiliser un timer local pour le preview
                const STORAGE_KEY = 'pack_complet_timer_start';
                const DURATION = 24 * 60 * 60 * 1000; // 24 heures en ms
                
                let startTime: string | null = localStorage.getItem(STORAGE_KEY);
                if (!startTime) {
                    startTime = Date.now().toString();
                    localStorage.setItem(STORAGE_KEY, startTime);
                }
                const startTimeNum: number = parseInt(startTime, 10);
                const endTime: number = startTimeNum + DURATION;
                
                function updateCountdown(): void {
                    const now: number = Date.now();
                    const remaining: number = endTime - now;
                    
                    if (remaining <= 0) {
                        updateAllDisplays(0, 0, 0);
                        return;
                    }
                    
                    const hours: number = Math.floor(remaining / (1000 * 60 * 60));
                    const minutes: number = Math.floor((remaining % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds: number = Math.floor((remaining % (1000 * 60)) / 1000);
                    
                    updateAllDisplays(hours, minutes, seconds);
                }
                
                updateCountdown();
                setInterval(updateCountdown, 1000);
                return;
            }
            
            // Mode normal : vérification du token requise (sauf si preview)
            if (!token && !isPreview) {
                // Pas de token et pas en preview, rediriger vers court-circuit
                console.log('⚠️ Pas de token - redirection vers court-circuit');
                window.location.href = '/court-circuit';
                return;
            }
            
            // Stocker le token dans localStorage
            localStorage.setItem('cc_token', token);
            
            // Vérifier le token et récupérer le temps restant
            async function checkTokenAndLoadCountdown(): Promise<void> {
                try {
                    const response = await fetch(`/.netlify/functions/check-access-cc?token=${encodeURIComponent(token || '')}`);
                    const data = await response.json();
                    
                    if (!data.valid) {
                        console.log('⚠️ Token invalide ou expiré - redirection vers court-circuit');
                        window.location.href = '/court-circuit';
                        return;
                    }
                    
                    // Token valide, afficher le countdown
                    const timeRemaining = data.timeRemaining; // en secondes
                    let expiresAt = data.expiresAt; // timestamp Unix (variable pour pouvoir être mise à jour)
                    
                    function updateCountdown(): void {
                        const now = Math.floor(Date.now() / 1000);
                        const remaining = expiresAt - now;
                        
                        if (remaining <= 0) {
                            updateAllDisplays(0, 0, 0);
                            return;
                        }
                        
                        const hours: number = Math.floor(remaining / 3600);
                        const minutes: number = Math.floor((remaining % 3600) / 60);
                        const seconds: number = remaining % 60;
                        
                        updateAllDisplays(hours, minutes, seconds);
                    }
                    
                    updateCountdown();
                    setInterval(updateCountdown, 1000);
                    
                    // Synchroniser toutes les 30 secondes
                    setInterval(async () => {
                        try {
                            const syncResponse = await fetch(`/.netlify/functions/check-access-cc?token=${encodeURIComponent(token || '')}`);
                            const syncData = await syncResponse.json();
                            if (syncData.valid) {
                                expiresAt = syncData.expiresAt;
                            }
                        } catch (syncError) {
                            console.error('Erreur synchronisation:', syncError);
                        }
                    }, 30000);
                    
                } catch (error) {
                    console.error('Erreur vérification token:', error);
                    window.location.href = '/court-circuit';
                }
            }
            
            function updateAllDisplays(hours: number, minutes: number, seconds: number): void {
                const hoursStr: string = String(hours).padStart(2, '0');
                const minutesStr: string = String(minutes).padStart(2, '0');
                const secondsStr: string = String(seconds).padStart(2, '0');
                const display: string = `${hoursStr}:${minutesStr}:${secondsStr}`;
                
                // Update separated timer elements
                const timerHours = document.getElementById('timerHours');
                const timerMinutes = document.getElementById('timerMinutes');
                const timerSeconds = document.getElementById('timerSeconds');
                
                if (timerHours) timerHours.textContent = hoursStr;
                if (timerMinutes) timerMinutes.textContent = minutesStr;
                if (timerSeconds) timerSeconds.textContent = secondsStr;
                
                // Update legacy single-string displays
                const stickyCountdown = document.getElementById('stickyCountdown');
                const finalCountdown = document.getElementById('finalCountdown');
                
                if (stickyCountdown) stickyCountdown.textContent = display;
                if (finalCountdown) finalCountdown.textContent = display;
            }
            
            checkTokenAndLoadCountdown();
        })();
        
