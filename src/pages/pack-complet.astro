    <meta property="og:type" content="website" />
    <meta property="og:title" content="Pack Complet - Toutes mes formations | Sonny Court" />
    <meta property="og:description" content="Accède à TOUT mon système de transformation. 7 formations complètes, 1 seul paiement, accès à vie." />
    <meta property="og:image" content={new URL("/media/pages/sonnycourt_share.webp", Astro.url)} />
