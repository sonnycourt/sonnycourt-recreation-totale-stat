    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #09090b;
            color: #fafafa;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Subtle gradient background */
        .page-wrapper {
            min-height: 100vh;
            background: 
                radial-gradient(ellipse 80% 50% at 50% -10%, rgba(124, 58, 237, 0.08) 0%, transparent 50%),
                #09090b;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 24px;
        }

        /* Timer Sticky Mobile */
        .sticky-timer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(9, 9, 11, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            padding: 12px 16px;
            z-index: 1000;
            display: none;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .sticky-timer-left {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sticky-timer-countdown {
            font-size: 18px;
            font-weight: 700;
            font-variant-numeric: tabular-nums;
            color: #fafafa;
        }

        .sticky-timer-cta {
            background: #fafafa;
            color: #09090b;
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
        }

        .sticky-timer-cta:hover {
            background: #e4e4e7;
        }

        @media (max-width: 768px) {
            .sticky-timer {
                display: flex;
            }
            body {
                padding-bottom: 70px;
            }
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 80px 24px 60px;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(124, 58, 237, 0.15);
            border: 1px solid rgba(124, 58, 237, 0.3);
            color: #a78bfa;
            padding: 8px 16px;
            border-radius: 100px;
            font-size: 13px;
            font-weight: 600;
            letter-spacing: 0.02em;
            margin-bottom: 32px;
        }

        .badge svg {
            width: 14px;
            height: 14px;
        }

        .hero-title {
            font-size: clamp(32px, 6vw, 48px);
            font-weight: 700;
            line-height: 1.15;
            margin-bottom: 20px;
            letter-spacing: -0.03em;
            color: #fafafa;
        }

        .hero-title .accent {
            background: linear-gradient(135deg, #a78bfa 0%, #c4b5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 18px;
            color: #a1a1aa;
            max-width: 520px;
            margin: 0 auto 40px;
            line-height: 1.6;
        }

        .hero-subtitle strong {
            color: #fafafa;
        }

        /* Timer Card */
        .timer-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 32px;
            max-width: 400px;
            margin: 0 auto;
        }

        .timer-label {
            font-size: 13px;
            color: #71717a;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            margin-bottom: 12px;
        }

        .timer-countdown {
            font-size: 48px;
            font-weight: 700;
            font-variant-numeric: tabular-nums;
            letter-spacing: -0.02em;
            color: #fafafa;
        }

        .timer-note {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            font-size: 13px;
            color: #71717a;
            margin-top: 16px;
        }

        .timer-note svg {
            width: 14px;
            height: 14px;
            stroke: #71717a;
        }

        /* Formations Section */
        .formations-section {
            padding: 40px 0 60px;
        }

        .section-label {
            text-align: center;
            font-size: 13px;
            color: #71717a;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 32px;
        }

        .formations-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
            margin-bottom: 48px;
        }

        .formation-item {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 16px;
            padding: 20px 24px;
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.2s ease;
        }

        .formation-item:hover {
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(255, 255, 255, 0.1);
        }

        .formation-image {
            width: 100px;
            height: 100px;
            border-radius: 12px;
            object-fit: cover;
            flex-shrink: 0;
        }

        .formation-content {
            flex: 1;
            min-width: 0;
        }

        .formation-name {
            font-size: 18px;
            font-weight: 600;
            color: #fafafa;
            margin-bottom: 6px;
        }

        .formation-desc {
            font-size: 15px;
            color: #a1a1aa;
            line-height: 1.6;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .formation-price {
            font-size: 16px;
            color: #52525b;
            text-decoration: line-through;
            flex-shrink: 0;
            font-weight: 500;
        }

        .formation-check {
            width: 28px;
            height: 28px;
            background: rgba(34, 197, 94, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .formation-check svg {
            width: 14px;
            height: 14px;
            stroke: #22c55e;
            stroke-width: 3;
        }

        /* Mobile adjustments */
        @media (max-width: 600px) {
            .formation-item {
                padding: 16px;
                gap: 14px;
            }
            
            .formation-image {
                width: 70px;
                height: 70px;
            }
            
            .formation-name {
                font-size: 15px;
            }
            
            .formation-desc {
                font-size: 13px;
                -webkit-line-clamp: 2;
            }
            
            .formation-price {
                font-size: 14px;
            }
        }

        /* Price Card */
        .price-card {
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.1) 0%, rgba(124, 58, 237, 0.05) 100%);
            border: 1px solid rgba(124, 58, 237, 0.2);
            border-radius: 20px;
            padding: 48px 32px;
            text-align: center;
        }

        .price-label {
            font-size: 14px;
            color: #71717a;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            margin-bottom: 8px;
        }

        .price-original {
            font-size: 26px;
            color: #52525b;
            text-decoration: line-through;
            margin-bottom: 8px;
        }

        .price-main {
            font-size: 80px;
            font-weight: 700;
            color: #fafafa;
            line-height: 1;
            letter-spacing: -0.03em;
            margin-bottom: 8px;
        }

        .price-main span {
            font-size: 36px;
            font-weight: 500;
        }

        .price-installment {
            font-size: 17px;
            color: #a1a1aa;
            margin-bottom: 24px;
        }

        .savings-tag {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            background: rgba(34, 197, 94, 0.15);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22c55e;
            padding: 12px 24px;
            border-radius: 100px;
            font-size: 16px;
            font-weight: 600;
        }

        .savings-tag svg {
            width: 20px;
            height: 20px;
        }

        /* CTA Section */
        .cta-section {
            text-align: center;
            padding: 48px 0;
        }

        .cta-button {
            display: inline-block;
            background: #fafafa;
            color: #09090b;
            padding: 20px 56px;
            border-radius: 12px;
            text-decoration: none;
            font-size: 18px;
            font-weight: 600;
            transition: all 0.2s ease;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
        }

        .cta-button:hover {
            background: #e4e4e7;
            transform: translateY(-2px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        }

        .cta-sub {
            font-size: 15px;
            color: #71717a;
            margin-top: 16px;
        }

        /* Reasons Section */
        .reasons-section {
            padding: 48px 0;
        }

        .reasons-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 16px;
            padding: 40px;
        }

        .reasons-title {
            font-size: 22px;
            font-weight: 600;
            color: #fafafa;
            margin-bottom: 28px;
            text-align: center;
        }

        .reasons-list {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .reason-item {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            font-size: 17px;
            color: #d4d4d8;
            line-height: 1.5;
        }

        .reason-icon {
            width: 28px;
            height: 28px;
            background: rgba(124, 58, 237, 0.15);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .reason-icon svg {
            width: 16px;
            height: 16px;
            stroke: #a78bfa;
        }

        /* Testimonials */
        .testimonials-section {
            padding: 48px 0;
        }

        .testimonials-title {
            font-size: 22px;
            font-weight: 600;
            color: #fafafa;
            margin-bottom: 28px;
            text-align: center;
        }

        .testimonials-grid {
            display: grid;
            gap: 20px;
        }

        .testimonial-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 16px;
            padding: 28px;
        }

        .testimonial-text {
            font-size: 16px;
            color: #d4d4d8;
            line-height: 1.7;
            margin-bottom: 16px;
            font-style: italic;
        }

        .testimonial-author {
            font-size: 14px;
            color: #71717a;
        }

        /* Urgency Section */
        .urgency-section {
            padding: 48px 0;
        }

        .urgency-card {
            background: rgba(239, 68, 68, 0.08);
            border: 1px solid rgba(239, 68, 68, 0.2);
            border-radius: 16px;
            padding: 40px;
            text-align: center;
        }

        .urgency-title {
            font-size: 20px;
            font-weight: 600;
            color: #fafafa;
            margin-bottom: 16px;
        }

        .urgency-countdown {
            font-size: 48px;
            font-weight: 700;
            font-variant-numeric: tabular-nums;
            color: #ef4444;
            margin-bottom: 12px;
        }

        .urgency-text {
            font-size: 16px;
            color: #a1a1aa;
            max-width: 440px;
            margin: 0 auto;
        }

        /* Guarantee */
        .guarantee-section {
            padding: 48px 0;
        }

        .guarantee-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 16px;
            padding: 40px;
            text-align: center;
        }

        .guarantee-icon {
            width: 64px;
            height: 64px;
            background: rgba(34, 197, 94, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .guarantee-icon svg {
            width: 32px;
            height: 32px;
            stroke: #22c55e;
        }

        .guarantee-title {
            font-size: 22px;
            font-weight: 600;
            color: #fafafa;
            margin-bottom: 12px;
        }

        .guarantee-text {
            font-size: 16px;
            color: #a1a1aa;
            max-width: 400px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Final CTA */
        .final-cta {
            text-align: center;
            padding: 48px 0 80px;
        }

        .final-timer {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 14px;
            font-size: 40px;
            font-weight: 700;
            font-variant-numeric: tabular-nums;
            color: #fafafa;
            margin-bottom: 28px;
        }

        .final-timer svg {
            width: 36px;
            height: 36px;
            stroke: #a78bfa;
        }

        /* Footer */
        .mini-footer {
            text-align: center;
            padding: 32px 24px;
            border-top: 1px solid rgba(255, 255, 255, 0.06);
        }

        .mini-footer p {
            font-size: 13px;
            color: #52525b;
            margin-bottom: 12px;
        }

        .mini-footer a {
            color: #71717a;
            text-decoration: none;
            font-size: 13px;
            margin: 0 12px;
            transition: color 0.2s ease;
        }

        .mini-footer a:hover {
            color: #fafafa;
        }
    </style>
</head>
