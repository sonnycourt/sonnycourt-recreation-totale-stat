    <script>
        // Timer 24h depuis l'arrivée sur la page
        (function() {
            const STORAGE_KEY = 'pack_complet_timer_start';
            const DURATION = 24 * 60 * 60 * 1000; // 24 heures en ms
            
            let startTime: string | null = localStorage.getItem(STORAGE_KEY);
            if (!startTime) {
                startTime = Date.now().toString();
                localStorage.setItem(STORAGE_KEY, startTime);
            }
            const startTimeNum: number = parseInt(startTime, 10);
            
            const endTime: number = startTimeNum + DURATION;
            
            function updateCountdown(): void {
                const now: number = Date.now();
                const remaining: number = endTime - now;
                
                if (remaining <= 0) {
                    const display: string = '00:00:00';
                    updateAllDisplays(display);
                    return;
                }
                
                const hours: number = Math.floor(remaining / (1000 * 60 * 60));
                const minutes: number = Math.floor((remaining % (1000 * 60 * 60)) / (1000 * 60));
                const seconds: number = Math.floor((remaining % (1000 * 60)) / 1000);
                
                const display: string = `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
                updateAllDisplays(display);
            }
            
            function updateAllDisplays(display: string): void {
                const mainCountdown = document.getElementById('mainCountdown');
                const stickyCountdown = document.getElementById('stickyCountdown');
                const urgencyCountdown = document.getElementById('urgencyCountdown');
                const finalCountdown = document.getElementById('finalCountdown');
                
                if (mainCountdown) mainCountdown.textContent = display;
                if (stickyCountdown) stickyCountdown.textContent = display;
                if (urgencyCountdown) urgencyCountdown.textContent = display;
                if (finalCountdown) finalCountdown.textContent = display;
            }
            
            updateCountdown();
            setInterval(updateCountdown, 1000);
        })();
        
        // Spiffy same tab
        document.addEventListener('DOMContentLoaded', function() {
            const spiffyLinks = document.querySelectorAll('a[href*="spiffy.co"]');
            spiffyLinks.forEach(function(link) {
                link.addEventListener('click', function(this: HTMLElement) {
                    this.setAttribute('target', '_self');
                });
            });
        });
    </script>
