<style>
  /* Styles de base */
  #sonny-homepage {
    width: 100vw;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    position: relative;
  }

  /* Hero Section */
  #sonny-homepage .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 100px 40px 40px;
    flex-direction: column;
  }

  #sonny-homepage .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
  }

    #sonny-homepage .gradient-mesh {
    position: fixed;
    width: 200vw;
    height: 200vh;
    top: -50vh;
    left: -50vw;
    background: 
        radial-gradient(circle at 20% 30%, rgba(0, 122, 255, 0.15) 0%, transparent 60%),
        radial-gradient(circle at 80% 70%, rgba(0, 122, 255, 0.08) 0%, transparent 70%),
        radial-gradient(circle at 40% 20%, rgba(0, 122, 255, 0.05) 0%, transparent 80%),
        radial-gradient(circle at 60% 80%, rgba(0, 122, 255, 0.03) 0%, transparent 90%);
    filter: blur(60px);
    opacity: 0.7;
    animation: meshMove 40s ease-in-out infinite;
    z-index: -2;
    pointer-events: none;
  }

  /* Animation des particules subconscientes - Toute la page */
  #sonny-homepage .subconscious-particles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    z-index: 0;
    pointer-events: none;
  }

  #sonny-homepage .particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: rgba(0, 122, 255, 0.4);
    border-radius: 50%;
    animation: particleFloat 12s ease-in-out infinite;
    box-shadow: 0 0 6px rgba(0, 122, 255, 0.3);
  }

  #sonny-homepage .particle:nth-child(1) {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
    animation-duration: 12s;
  }

  #sonny-homepage .particle:nth-child(2) {
    top: 20%;
    left: 80%;
    animation-delay: 2s;
    animation-duration: 15s;
  }

  #sonny-homepage .particle:nth-child(3) {
    top: 60%;
    left: 20%;
    animation-delay: 4s;
    animation-duration: 10s;
  }

  #sonny-homepage .particle:nth-child(4) {
    top: 80%;
    left: 70%;
    animation-delay: 6s;
    animation-duration: 18s;
  }

  #sonny-homepage .particle:nth-child(5) {
    top: 30%;
    left: 50%;
    animation-delay: 1s;
    animation-duration: 14s;
  }

  #sonny-homepage .particle:nth-child(6) {
    top: 70%;
    left: 90%;
    animation-delay: 3s;
    animation-duration: 16s;
  }

  #sonny-homepage .particle:nth-child(7) {
    top: 45%;
    left: 25%;
    animation-delay: 5s;
    animation-duration: 11s;
  }

  #sonny-homepage .particle:nth-child(8) {
    top: 85%;
    left: 45%;
    animation-delay: 7s;
    animation-duration: 13s;
  }

  @keyframes particleFloat {
    0% {
      transform: translateY(120vh) translateX(0px) scale(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
      transform: translateY(100vh) translateX(0px) scale(1);
    }
    90% {
      opacity: 1;
      transform: translateY(-20px) translateX(30px) scale(1);
    }
    100% {
      transform: translateY(-40px) translateX(40px) scale(0);
      opacity: 0;
    }
  }

  /* Effet de profondeur avec des cercles flous */
  #sonny-homepage .depth-layers {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    z-index: -1;
    pointer-events: none;
  }

  #sonny-homepage .depth-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(0, 122, 255, 0.02);
    filter: blur(2px);
    animation: depthFloat 20s ease-in-out infinite;
  }

  #sonny-homepage .depth-circle:nth-child(1) {
    width: 300px;
    height: 300px;
    top: 10%;
    left: 15%;
    animation-delay: 0s;
  }

  #sonny-homepage .depth-circle:nth-child(2) {
    width: 200px;
    height: 200px;
    top: 60%;
    right: 20%;
    animation-delay: -7s;
  }

  #sonny-homepage .depth-circle:nth-child(3) {
    width: 150px;
    height: 150px;
    bottom: 20%;
    left: 60%;
    animation-delay: -14s;
  }

  @keyframes depthFloat {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) scale(1); 
      opacity: 0.3; 
    }
    50% { 
      transform: translateY(-30px) translateX(20px) scale(1.1); 
      opacity: 0.1; 
    }
  }

  @keyframes meshMove {
    0%, 100% { 
      transform: rotate(0deg) scale(1) translateX(0px) translateY(0px); 
    }
    25% { 
      transform: rotate(45deg) scale(1.1) translateX(20px) translateY(-10px); 
    }
    50% { 
      transform: rotate(90deg) scale(1.3) translateX(-15px) translateY(25px); 
    }
    75% { 
      transform: rotate(135deg) scale(1.2) translateX(10px) translateY(-20px); 
    }
  }

  #sonny-homepage .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    z-index: 2;
    width: 100%;
    padding: 0 20px;
  }

  #sonny-homepage .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    background: #1C1C1E;
    border-radius: 100px;
    margin-bottom: 24px;
  }

  #sonny-homepage .badge-live {
    width: 8px;
    height: 8px;
    background: #34C759;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  #sonny-homepage .badge-text {
    font-size: 12px;
    color: #8E8E93;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  #sonny-homepage h1 {
    font-size: clamp(56px, 10vw, 88px);
    font-weight: 700;
    line-height: 0.95;
    margin-bottom: 24px;
    letter-spacing: -0.04em;
    background: linear-gradient(180deg, #FFFFFF 0%, #636366 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', sans-serif;
  }

  #sonny-homepage .hero-subtitle {
    font-size: 21px;
    color: #8E8E93;
    line-height: 1.4;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  #sonny-homepage .cta-container {
    display: flex;
    gap: 16px;
    justify-content: center;
    align-items: center;
    margin-bottom: 60px;
  }

  #sonny-homepage .cta-primary {
    display: inline-block;
    padding: 20px 50px;
    font-size: 1.2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #FFFFFF;
    background: linear-gradient(135deg, #007AFF 0%, #0051D5 50%, #007AFF 100%);
    background-size: 200% 200%;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 
      0 10px 30px rgba(0, 122, 255, 0.4),
      inset 0 0 0 2px rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
    text-decoration: none;
    animation: buttonPulse 2s ease-in-out infinite;
  }

  #sonny-homepage .cta-primary::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 70%
    );
    transform: rotate(45deg);
    transition: all 0.6s;
    animation: buttonShine 3s ease-in-out infinite;
    pointer-events: none;
  }

  #sonny-homepage .cta-primary:hover {
    background-position: 100% 100%;
    transform: scale(1.05);
    box-shadow: 
      0 20px 50px rgba(0, 122, 255, 0.7),
      inset 0 0 0 2px rgba(255, 255, 255, 0.3),
      0 0 80px rgba(0, 122, 255, 0.5);
    animation: none;
  }

  #sonny-homepage .cta-primary:active {
    transform: scale(1.02);
  }

  /* Animations EXACTES de access-optin.html */
  @keyframes buttonPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 
        0 10px 30px rgba(0, 122, 255, 0.4),
        inset 0 0 0 2px rgba(255, 255, 255, 0.1);
    }
    50% {
      transform: scale(1.02);
      box-shadow: 
        0 15px 40px rgba(0, 122, 255, 0.6),
        inset 0 0 0 2px rgba(255, 255, 255, 0.2);
    }
  }

  @keyframes buttonShine {
    0% { 
      transform: rotate(45deg) translateX(-200%); 
    }
    100% { 
      transform: rotate(45deg) translateX(200%); 
    }
  }

  /* Features Grid */
  #sonny-homepage .features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    max-width: 900px;
    margin: 0 auto;
    margin-bottom: 20px;
    width: 100%;
  }

  #sonny-homepage .feature-card {
    padding: 40px 32px;
    background: linear-gradient(145deg, #1C1C1E, rgba(0, 122, 255, 0.05));
    border-radius: 24px;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    border: 1px solid rgba(255, 255, 255, 0.08);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  #sonny-homepage .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(0, 122, 255, 0.8), transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  #sonny-homepage .feature-card:hover::before {
    opacity: 1;
  }

  #sonny-homepage .feature-card:hover {
    background: linear-gradient(145deg, #2C2C2E, rgba(0, 122, 255, 0.1));
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.15);
  }

  #sonny-homepage .feature-card::after {
    content: attr(data-number);
    position: absolute;
    top: -30px;
    right: -30px;
    font-size: 140px;
    font-weight: 900;
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.15), rgba(0, 122, 255, 0.08));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', sans-serif;
    pointer-events: none;
    z-index: 0;
    transition: all 0.4s ease;
  }

  #sonny-homepage .feature-card[data-number="1"]::after {
    right: -20px;
    top: -25px;
  }

  #sonny-homepage .feature-card:hover::after {
    transform: scale(1.1);
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.25), rgba(0, 122, 255, 0.15));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  #sonny-homepage .feature h3 {
    font-size: 22px;
    margin-bottom: 16px;
    font-weight: 700;
    color: #FFFFFF;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #FFFFFF, #C7C7CC);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  #sonny-homepage .feature p {
    font-size: 16px;
    color: #8E8E93;
    line-height: 1.6;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  #sonny-homepage .feature h3,
  #sonny-homepage .feature p {
    position: relative;
    z-index: 1;
  }

  /* Newsletter Section */
  #sonny-homepage .newsletter {
    padding: 30px 40px 60px;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    width: 100%;
  }

  #sonny-homepage .newsletter-card {
    background: linear-gradient(145deg, #1C1C1E, rgba(0, 122, 255, 0.05));
    border-radius: 24px;
    padding: 40px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  #sonny-homepage .newsletter-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(0, 122, 255, 0.8), transparent);
    opacity: 1;
  }

  #sonny-homepage .newsletter-title {
    font-size: 28px;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 12px;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #FFFFFF, #C7C7CC);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  #sonny-homepage .newsletter-subtitle {
    font-size: 16px;
    color: #8E8E93;
    margin-bottom: 32px;
    line-height: 1.5;
  }

  #sonny-homepage .newsletter-form {
    display: flex;
    gap: 12px;
    max-width: 400px;
    margin: 0 auto;
  }

  #sonny-homepage .newsletter-input {
    flex: 1;
    padding: 14px 20px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    color: #FFFFFF;
    font-size: 15px;
    outline: none;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  #sonny-homepage .newsletter-input::placeholder {
    color: #636366;
  }

  #sonny-homepage .newsletter-input:focus {
    border-color: #007AFF;
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 4px rgba(0, 122, 255, 0.1);
  }

  #sonny-homepage .newsletter-btn {
    padding: 14px 28px;
    background: #007AFF;
    color: #FFFFFF;
    border: none;
    border-radius: 100px;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
    white-space: nowrap;
  }

  #sonny-homepage .newsletter-btn:hover {
    background: #0051D5;
    transform: translateY(-1px);
    box-shadow: 0 8px 24px rgba(0, 122, 255, 0.3);
  }

  #sonny-homepage .newsletter-btn:disabled {
    background: #48484A;
    cursor: not-allowed;
    transform: none;
  }

  #sonny-homepage .newsletter-message {
    margin-top: 16px;
    padding: 12px 20px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  #sonny-homepage .newsletter-message.show {
    opacity: 1;
  }

  #sonny-homepage .newsletter-message.success {
    background: rgba(52, 199, 89, 0.1);
    color: #34C759;
    border: 1px solid rgba(52, 199, 89, 0.2);
  }

  #sonny-homepage .newsletter-message.error {
    background: rgba(255, 59, 48, 0.1);
    color: #FF3B30;
    border: 1px solid rgba(255, 59, 48, 0.2);
  }

  /* Floating Elements */
  #sonny-homepage .floating-card {
    position: absolute;
    background: #1C1C1E;
    border-radius: 16px;
    padding: 16px 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    animation: float 6s ease-in-out infinite;
    z-index: 5;
  }

  #sonny-homepage .floating-card-1 {
    top: 15%;
    left: 5%;
    animation-delay: 0s;
  }

  #sonny-homepage .floating-card-2 {
    top: 65%;
    right: 8%;
    animation-delay: -3s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  #sonny-homepage .floating-stat {
    font-size: 24px;
    font-weight: 700;
    color: #007AFF;
    margin-bottom: 4px;
  }

  #sonny-homepage .floating-label {
    font-size: 13px;
    color: #8E8E93;
  }

