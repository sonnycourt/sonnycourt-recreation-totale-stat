      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 40px;
      padding: 0 10px;
    }

    #sonny-homepage .feature-card {
      padding: 30px 24px;
      margin-bottom: 0;
    }

    #sonny-homepage .feature h3 {
