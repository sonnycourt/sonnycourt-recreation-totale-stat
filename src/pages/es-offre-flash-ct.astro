    }
    
    const urgencyText = document.querySelector('.urgency-text');
    if (urgencyText) {
      urgencyText.textContent = 'Cette offre a expiré';
    }
    
    // Update price warning
    const priceWarning = document.querySelector('.price-warning span');
    if (priceWarning) {
      priceWarning.textContent = 'Cette offre a expiré';
    }
  }

  const updateTimer = () => {
    const now = Date.now();
    const diff = endTime - now;
    
    if (diff <= 0) {
      const timeString = '0:00';
      if (timerEl) timerEl.textContent = timeString;
      if (ctaTimerEl) ctaTimerEl.textContent = timeString;
      if (ctaTimerBottomEl) ctaTimerBottomEl.textContent = timeString;
      disableOffer();
      return;
    }
    
    const totalSeconds = Math.floor(diff / 1000);
    const mins = Math.floor(totalSeconds / 60);
    const secs = totalSeconds % 60;
    const timeString = `${mins}:${secs.toString().padStart(2, '0')}`;
    
    if (timerEl) timerEl.textContent = timeString;
    if (ctaTimerEl) ctaTimerEl.textContent = timeString;
    if (ctaTimerBottomEl) ctaTimerBottomEl.textContent = timeString;
  };

  if (timerEl || ctaTimerEl || ctaTimerBottomEl) {
    updateTimer();
    setInterval(updateTimer, 1000);
  }

  // Generate thumbnails from first frame
  function generateVideoThumbnail(video: HTMLVideoElement, timeInSeconds: number = 0.1) {
    if (video.poster) return; // Already has a poster
    
    const canvas = document.createElement('canvas');
    const ctx = canvas.getContext('2d');
    if (!ctx) return;
    
    const captureFrame = () => {
      try {
        // Set dimensions based on video
        const width = video.videoWidth || 1280;
        const height = video.videoHeight || 720;
        if (width === 0 || height === 0) {
          console.log('Video dimensions not available yet');
          return;
        }
        canvas.width = width;
        canvas.height = height;
        
        // Draw the current frame
        ctx.drawImage(video, 0, 0, width, height);
        const dataURL = canvas.toDataURL('image/jpeg', 0.8);
        video.poster = dataURL;
        console.log('Thumbnail captured successfully at', video.currentTime, 's');
      } catch (e) {
        console.log('Could not capture frame:', e);
      }
    };
    
    // Set video to specific time and capture
    const seekToFrame = () => {
      // Wait for video to have duration
      if (!video.duration || isNaN(video.duration)) {
        console.log('Waiting for video duration...');
        video.addEventListener('loadedmetadata', seekToFrame, { once: true });
        return;
      }
      
      // Ensure time doesn't exceed video duration
      const targetTime = Math.min(timeInSeconds, video.duration);
      console.log('Seeking to', targetTime, 's (duration:', video.duration, 's)');
      video.currentTime = targetTime;
      
      const onSeeked = () => {
        // Small delay to ensure frame is rendered
        setTimeout(() => {
          captureFrame();
          video.currentTime = 0; // Reset to start after capture
        }, 100);
        video.removeEventListener('seeked', onSeeked);
      };
      
      video.addEventListener('seeked', onSeeked, { once: true });
    };
    
    // Wait for video to be ready
    if (video.readyState >= 2 && video.duration && !isNaN(video.duration)) {
      // For times > 0.1, we need more data loaded
      if (timeInSeconds > 0.1) {
        // Wait for canplaythrough or use loadeddata
        if (video.readyState >= 3) {
          seekToFrame();
        } else {
          video.addEventListener('canplaythrough', seekToFrame, { once: true });
          // Fallback if canplaythrough doesn't fire
          setTimeout(() => {
            if (!video.poster) seekToFrame();
          }, 2000);
        }
      } else {
        seekToFrame();
      }
    } else {
      // For longer times, wait for more data
      if (timeInSeconds > 0.1) {
        video.addEventListener('canplaythrough', seekToFrame, { once: true });
        // Fallback
        setTimeout(() => {
          if (!video.poster && video.duration) seekToFrame();
        }, 3000);
      } else {
        video.addEventListener('loadedmetadata', seekToFrame, { once: true });
      }
    }
  }

  // Custom Video Player Controls
  document.addEventListener('DOMContentLoaded', function() {
    // Generate thumbnails for review videos
    const reviewVideos = document.querySelectorAll('.review-video');
    reviewVideos.forEach((video) => {
      if (video instanceof HTMLVideoElement) {
        generateVideoThumbnail(video);
      }
    });
    
    const videoWrappers = document.querySelectorAll('.video-player-wrapper');
    
    videoWrappers.forEach(wrapper => {
      const video = wrapper.querySelector('.review-video') as HTMLVideoElement;
      const playPauseBtn = wrapper.querySelector('.play-pause-btn') as HTMLButtonElement;
      const playIcon = wrapper.querySelector('.play-icon') as SVGElement;
      const pauseIcon = wrapper.querySelector('.pause-icon') as SVGElement;
      const progressBar = wrapper.querySelector('.video-progress-filled') as HTMLElement;
      const progressContainer = wrapper.querySelector('.video-progress-container') as HTMLElement;
      const timeDisplay = wrapper.querySelector('.video-time') as HTMLElement;
      const fullscreenBtn = wrapper.querySelector('.fullscreen-btn') as HTMLButtonElement;
      
      if (!video || !playPauseBtn || !playIcon || !pauseIcon || !progressBar || !progressContainer || !timeDisplay || !fullscreenBtn) {
        return;
      }
      
      let isPlaying = false;
      let hideControlsTimeout: ReturnType<typeof setTimeout> | null = null;
      
      function formatTime(seconds: number): string {
        const mins = Math.floor(seconds / 60);
        const secs = Math.floor(seconds % 60);
        return `${mins}:${secs.toString().padStart(2, '0')}`;
      }
      
      function updateTime() {
        if (video.duration) {
          timeDisplay.textContent = `${formatTime(video.currentTime)} / ${formatTime(video.duration)}`;
        }
      }
      
      function updateProgress() {
        if (video.duration) {
          const progress = (video.currentTime / video.duration) * 100;
          progressBar.style.width = progress + '%';
        }
      }
      
      function showControls() {
        wrapper.classList.add('show-controls');
        if (hideControlsTimeout) {
          clearTimeout(hideControlsTimeout);
        }
        if (isPlaying) {
          hideControlsTimeout = setTimeout(() => {
            if (isPlaying) {
              wrapper.classList.remove('show-controls');
            }
          }, 3000);
        }
      }
      
      function hideControls() {
        wrapper.classList.remove('show-controls');
      }
      
      function togglePlayPause() {
        if (video.paused) {
          video.play();
          isPlaying = true;
          wrapper.classList.add('playing');
          playIcon.style.display = 'none';
          pauseIcon.style.display = 'block';
        } else {
          video.pause();
          isPlaying = false;
          wrapper.classList.remove('playing');
          playIcon.style.display = 'block';
          pauseIcon.style.display = 'none';
        }
        showControls();
      }
      
      wrapper.addEventListener('click', function(e: Event) {
        const target = e.target as HTMLElement;
        if (target === playPauseBtn || target.closest('.play-pause-btn')) {
          return;
        }
        if (target === fullscreenBtn || target.closest('.fullscreen-btn')) {
          return;
        }
        if (target === progressContainer || target.closest('.video-progress-container')) {
          return;
        }
        togglePlayPause();
      });
      
      playPauseBtn.addEventListener('click', function(e: Event) {
        e.stopPropagation();
        togglePlayPause();
      });
      
      progressContainer.addEventListener('click', function(e: Event) {
        e.stopPropagation();
        const mouseEvent = e as MouseEvent;
        const rect = progressContainer.getBoundingClientRect();
        const clickX = mouseEvent.clientX - rect.left;
        const percentage = clickX / rect.width;
        video.currentTime = percentage * video.duration;
        updateProgress();
        updateTime();
      });
      
      video.addEventListener('loadedmetadata', function() {
        updateTime();
        updateProgress();
      });
      
      video.addEventListener('timeupdate', function() {
        updateProgress();
        updateTime();
      });
      
      video.addEventListener('play', function() {
        isPlaying = true;
        wrapper.classList.add('playing');
        playIcon.style.display = 'none';
        pauseIcon.style.display = 'block';
        showControls();
      });
      
      video.addEventListener('pause', function() {
        isPlaying = false;
        wrapper.classList.remove('playing');
        playIcon.style.display = 'block';
        pauseIcon.style.display = 'none';
        showControls();
      });
      
      video.addEventListener('ended', function() {
        isPlaying = false;
        wrapper.classList.remove('playing');
        playIcon.style.display = 'block';
        pauseIcon.style.display = 'none';
        progressBar.style.width = '0%';
        video.currentTime = 0;
        updateTime();
      });
      
      fullscreenBtn.addEventListener('click', function(e: Event) {
        e.stopPropagation();
        if (!document.fullscreenElement) {
          (wrapper as HTMLElement).requestFullscreen().catch((err: Error) => {
            console.log('Error attempting to enable fullscreen:', err);
          });
        } else {
          document.exitFullscreen();
        }
      });
      
      wrapper.addEventListener('mousemove', showControls);
      wrapper.addEventListener('mouseleave', function() {
        if (isPlaying) {
          hideControls();
        }
      });
      
      wrapper.addEventListener('touchstart', function() {
        showControls();
      });
    });
  });
</script>

