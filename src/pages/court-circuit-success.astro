<style>
  #court-circuit-success-page {
    background: #0a0a0a;
    color: #ffffff;
    position: relative;
    overflow-x: hidden;
  }

  /* Background Effects - Même style que court-circuit */
  .background-effects {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    min-height: 100%;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .gradient-mesh {
    display: none;
  }

  .depth-layers,
  .subconscious-particles {
    display: none;
  }

  /* Success Banner (Compact) */
  .success-banner {
    position: relative;
    z-index: 1;
    margin-top: 0; /* Pas de header */
    padding: 30px 20px;
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.1) 0%, rgba(0, 81, 213, 0.05) 100%);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 122, 255, 0.2);
    animation: fadeInDown 0.8s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .banner-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .banner-icon {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.2) 0%, rgba(0, 81, 213, 0.2) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(0, 122, 255, 0.4);
    animation: successPulse 2s ease-in-out infinite;
  }

  .banner-icon svg {
    color: #007AFF;
    width: 30px;
    height: 30px;
  }

  @keyframes successPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(0, 122, 255, 0.4);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 0 0 15px rgba(0, 122, 255, 0);
    }
  }

  .banner-text {
    flex: 1;
  }

  .banner-text h2 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: 8px;
    color: #ffffff;
    text-shadow: 0 0 20px rgba(0, 122, 255, 0.3);
  }

  .banner-text p {
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    color: #e0e0e0;
    line-height: 1.5;
    margin: 0;
  }

  .banner-text .highlight-blue {
    color: #007AFF;
    background: linear-gradient(135deg, #2D9AFF 0%, #007AFF 50%, #4DA3FF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  /* ============================================
     LOW TICKET OFFER - VIBRANT SALES DESIGN
     ============================================ */
  
  .low-ticket-offer {
    position: relative;
    z-index: 1;
    padding: 40px 20px 80px;
    background: linear-gradient(180deg, #000000 0%, #0f0f0f 25%, #141414 50%, #0f0f0f 75%, #000000 100%);
  }

  .offer-container {
    max-width: 640px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* ---- URGENCY BAR ---- */
  .urgency-bar {
    background: linear-gradient(90deg, #dc2626 0%, #ef4444 50%, #dc2626 100%);
    background-size: 200% 100%;
    animation: urgencyShine 3s ease-in-out infinite;
    border-radius: 12px;
    padding: 14px 20px;
    margin: 0 auto 36px;
    max-width: fit-content;
    box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
  }

  @keyframes urgencyShine {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .urgency-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .urgency-pulse {
    width: 10px;
    height: 10px;
    background: #fff;
    border-radius: 50%;
    animation: pulse-glow 1.5s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(255,255,255,0.6); }
    50% { opacity: 0.8; box-shadow: 0 0 0 8px rgba(255,255,255,0); }
  }

  .urgency-text {
    font-size: 14px;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .timer-wrapper {
    background: rgba(0, 0, 0, 0.3);
    padding: 8px 16px;
    border-radius: 8px;
  }

  .timer {
    font-size: 18px;
    font-weight: 800;
    color: #fff;
    font-variant-numeric: tabular-nums;
  }

  /* ---- OFFER HERO ---- */
  .offer-hero {
    text-align: center;
    margin-bottom: 32px;
  }

  .offer-eyebrow {
    display: inline-block;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #fbbf24;
    background: rgba(251, 191, 36, 0.15);
    padding: 8px 16px;
    border-radius: 100px;
    margin-bottom: 20px;
  }

  .offer-title {
    font-size: clamp(36px, 10vw, 56px);
    font-weight: 900;
    line-height: 1.05;
    color: #ffffff;
    margin-bottom: 16px;
    text-shadow: 0 4px 30px rgba(0,0,0,0.5);
  }

  .title-highlight {
    display: block;
    color: #f59e0b;
    text-shadow: 0 0 40px rgba(245, 158, 11, 0.5);
  }

  .offer-tagline {
    font-size: 18px;
    color: #a0a0a0;
    font-weight: 500;
  }

  /* ---- PRODUCT SHOWCASE ---- */
  .product-showcase {
