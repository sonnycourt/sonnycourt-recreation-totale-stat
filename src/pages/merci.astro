<style>
  .thank-you-page {
    min-height: 100vh;
    padding-top: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .thank-you-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 40px;
    text-align: center;
  }

  .success-icon {
    font-size: 80px;
    margin-bottom: 32px;
    animation: bounce 1s ease-in-out;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-20px); }
    60% { transform: translateY(-10px); }
  }

  h1 {
    font-size: clamp(36px, 6vw, 56px);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 24px;
    letter-spacing: -0.03em;
    background: linear-gradient(180deg, #FFFFFF 0%, #636366 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 20px;
    color: #8E8E93;
    line-height: 1.5;
    margin-bottom: 60px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .next-steps {
    margin-bottom: 60px;
  }

  .next-steps h2 {
    font-size: 28px;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 40px;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-bottom: 40px;
  }

  .step-card {
    padding: 32px 24px;
    background: linear-gradient(145deg, #1C1C1E, rgba(0, 122, 255, 0.05));
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
  }

  .step-card:hover {
    transform: translateY(-8px);
    background: linear-gradient(145deg, #2C2C2E, rgba(0, 122, 255, 0.1));
    border-color: rgba(255, 255, 255, 0.15);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .step-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .step-card h3 {
    font-size: 20px;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 12px;
  }

  .step-card p {
    font-size: 16px;
    color: #8E8E93;
    line-height: 1.5;
    margin: 0;
  }

  .contact-info {
    padding: 24px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    margin-bottom: 40px;
  }

  .contact-info p {
    color: #C7C7CC;
    font-size: 16px;
    margin: 0;
    line-height: 1.6;
  }

  .contact-info strong {
    color: #FFFFFF;
  }

  .home-button {
    display: inline-block;
    padding: 16px 32px;
    background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
    color: #FFFFFF;
    text-decoration: none;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .home-button:hover {
    background: linear-gradient(135deg, #0051D5 0%, #0039A6 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 122, 255, 0.3);
  }

  /* Mobile Optimization */
  @media (max-width: 768px) {
    .thank-you-content {
      padding: 40px 20px;
    }

    .success-icon {
      font-size: 60px;
      margin-bottom: 24px;
    }

    h1 {
      font-size: 32px;
      margin-bottom: 20px;
    }

    .subtitle {
      font-size: 18px;
      margin-bottom: 40px;
    }

    .next-steps h2 {
      font-size: 24px;
      margin-bottom: 30px;
    }

    .steps-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .step-card {
      padding: 24px 20px;
    }

    .step-icon {
      font-size: 40px;
      margin-bottom: 12px;
    }

    .step-card h3 {
      font-size: 18px;
      margin-bottom: 8px;
    }

    .step-card p {
      font-size: 14px;
    }

    .contact-info {
      padding: 20px;
      margin-bottom: 30px;
    }

    .contact-info p {
      font-size: 14px;
    }

    .home-button {
      padding: 14px 28px;
      font-size: 14px;
    }
  }
</style>
