  }

  .depth-circle:nth-child(1) {
    width: 300px;
    height: 300px;
    top: 10%;
    left: 15%;
    animation-delay: 0s;
  }

  .depth-circle:nth-child(2) {
    width: 200px;
    height: 200px;
    top: 60%;
    right: 20%;
    animation-delay: -7s;
