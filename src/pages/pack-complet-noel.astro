    <meta name="twitter:image" content={new URL("/media/pages/sonnycourt_share.webp", Astro.url)} />
    
    <!-- GA4 Consent Mode v2 -->
    <GAConsentMode />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #09090b;
            color: #fafafa;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Subtle gradient background */
        .page-wrapper {
            min-height: 100vh;
            background: 
                radial-gradient(ellipse 80% 50% at 50% -10%, rgba(251, 191, 36, 0.1) 0%, transparent 50%),
                #09090b;
        }

        /* Zone de flocons de neige en haut de page */
        .snowfall-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 400px;
            overflow: hidden;
            pointer-events: none;
            z-index: 50;
            mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0.5) 70%, rgba(0,0,0,0) 100%);
            -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0.5) 70%, rgba(0,0,0,0) 100%);
        }

        .snowflake {
            position: absolute;
            color: rgba(255, 255, 255, 0.9);
            font-size: 1rem;
            user-select: none;
            animation: snowfall linear infinite;
            text-shadow: 0 0 3px rgba(255, 255, 255, 0.5);
        }

        .snowflake:nth-child(1) { left: 5%; animation-duration: 8s; animation-delay: 0s; font-size: 0.8rem; opacity: 0.7; }
        .snowflake:nth-child(2) { left: 15%; animation-duration: 10s; animation-delay: 1s; font-size: 1rem; opacity: 0.9; }
        .snowflake:nth-child(3) { left: 25%; animation-duration: 7s; animation-delay: 2s; font-size: 0.6rem; opacity: 0.6; }
        .snowflake:nth-child(4) { left: 35%; animation-duration: 9s; animation-delay: 0.5s; font-size: 1.2rem; opacity: 0.8; }
        .snowflake:nth-child(5) { left: 45%; animation-duration: 11s; animation-delay: 3s; font-size: 0.9rem; opacity: 0.7; }
        .snowflake:nth-child(6) { left: 55%; animation-duration: 8s; animation-delay: 1.5s; font-size: 0.7rem; opacity: 0.9; }
        .snowflake:nth-child(7) { left: 65%; animation-duration: 10s; animation-delay: 2.5s; font-size: 1.1rem; opacity: 0.6; }
        .snowflake:nth-child(8) { left: 75%; animation-duration: 9s; animation-delay: 0s; font-size: 0.8rem; opacity: 0.8; }
        .snowflake:nth-child(9) { left: 85%; animation-duration: 7s; animation-delay: 4s; font-size: 1rem; opacity: 0.7; }
        .snowflake:nth-child(10) { left: 95%; animation-duration: 12s; animation-delay: 1s; font-size: 0.5rem; opacity: 0.9; }
        .snowflake:nth-child(11) { left: 10%; animation-duration: 9s; animation-delay: 3.5s; font-size: 0.9rem; opacity: 0.5; }
        .snowflake:nth-child(12) { left: 30%; animation-duration: 11s; animation-delay: 2s; font-size: 0.7rem; opacity: 0.8; }
        .snowflake:nth-child(13) { left: 50%; animation-duration: 8s; animation-delay: 4.5s; font-size: 1.3rem; opacity: 0.6; }
        .snowflake:nth-child(14) { left: 70%; animation-duration: 10s; animation-delay: 1s; font-size: 0.6rem; opacity: 0.9; }
        .snowflake:nth-child(15) { left: 90%; animation-duration: 9s; animation-delay: 3s; font-size: 0.8rem; opacity: 0.7; }

        @keyframes snowfall {
            0% {
                transform: translateY(-20px) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(400px) rotate(360deg);
                opacity: 0;
            }
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 24px;
        }

        /* Timer Sticky Mobile */
        .sticky-timer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(9, 9, 11, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            padding: 12px 16px;
            z-index: 1000;
            display: none;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .sticky-timer-left {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sticky-timer-countdown {
            font-size: 18px;
            font-weight: 700;
            font-variant-numeric: tabular-nums;
            color: #fafafa;
        }

        .sticky-timer-cta {
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
            color: #09090b;
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
        }

        .sticky-timer-cta:hover {
            background: linear-gradient(135deg, #fbbf24, #fcd34d);
        }

        @media (max-width: 768px) {
            .sticky-timer {
                display: flex;
            }
            body {
                padding-bottom: 70px;
            }
        }


        /* Hero Section */
        .hero {
            text-align: center;
            padding: 80px 24px 60px;
        }

        /* Seasonal Badge - NOEL */
        .seasonal-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(239, 68, 68, 0.15);
            border: 1px solid rgba(239, 68, 68, 0.4);
            color: #ef4444;
            padding: 8px 16px;
            border-radius: 100px;
            font-size: 13px;
            font-weight: 600;
            letter-spacing: 0.02em;
            margin-bottom: 32px;
        }

        /* Fixed Corner Discount Badge */
        .discount-sticker {
            position: fixed;
            top: 100px;
            right: 20px;
            z-index: 1000;
            width: 100px;
            height: 100px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%);
            border-radius: 50%;
            transform: rotate(12deg);
            box-shadow: 
                0 10px 40px rgba(239, 68, 68, 0.5),
                0 0 0 4px rgba(255, 255, 255, 0.1),
                inset 0 -4px 20px rgba(0, 0, 0, 0.2);
            animation: sticker-bounce 2s ease-in-out infinite;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .discount-sticker:hover {
            transform: rotate(12deg) scale(1.1);
        }

        .discount-sticker::before {
            content: '';
            position: absolute;
            top: 5px;
            left: 5px;
            right: 5px;
            bottom: 5px;
            border: 2px dashed rgba(255, 255, 255, 0.4);
            border-radius: 50%;
        }

        .discount-sticker::after {
            content: '';
            position: absolute;
            top: 8px;
            left: 20%;
            width: 60%;
            height: 15px;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.3), transparent);
            border-radius: 50%;
        }

        .discount-sticker .percent {
            font-size: 32px;
            font-weight: 900;
            color: #fff;
            line-height: 1;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .discount-sticker .label {
            font-size: 10px;
            font-weight: 700;
            color: rgba(255, 255, 255, 0.9);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-top: 2px;
        }

        @keyframes sticker-bounce {
            0%, 100% {
                transform: rotate(12deg) translateY(0);
            }
            50% {
                transform: rotate(12deg) translateY(-8px);
            }
        }

        .seasonal-badge-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 14px;
            height: 14px;
        }

        .seasonal-badge-icon svg {
            width: 14px;
            height: 14px;
            color: #ef4444;
            stroke: #ef4444;
        }

        .seasonal-badge-text {
            color: #ef4444;
        }

        /* Inline discount badge for price card */
        .discount-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: #fff;
            padding: 10px 24px;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 800;
            letter-spacing: 0.05em;
            box-shadow: 0 4px 16px rgba(239, 68, 68, 0.4);
        }

        @media (max-width: 768px) {
            .discount-sticker {
                width: 80px;
                height: 80px;
                top: 80px;
                right: 10px;
            }
            .discount-sticker .percent {
                font-size: 26px;
            }
            .discount-sticker .label {
                font-size: 8px;
            }
        }

        .hero-title {
            font-size: clamp(32px, 6vw, 48px);
            font-weight: 700;
            line-height: 1.15;
            margin-bottom: 20px;
            letter-spacing: -0.03em;
            color: #fafafa;
        }

        .hero-title .accent {
            background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 18px;
            color: #a1a1aa;
            max-width: 520px;
            margin: 0 auto 40px;
            line-height: 1.6;
        }

        .hero-subtitle strong {
            color: #fafafa;
        }

        /* Timer Card */
        .timer-card {
            position: relative;
            background: linear-gradient(180deg, rgba(239, 68, 68, 0.08) 0%, rgba(9, 9, 11, 0.95) 100%);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 20px;
            padding: 40px 48px;
            max-width: 500px;
            margin: 0 auto;
            overflow: hidden;
            box-shadow: 
                0 0 60px rgba(239, 68, 68, 0.15),
                0 25px 50px -12px rgba(0, 0, 0, 0.5);
            animation: timer-pulse 2s ease-in-out infinite;
        }

        .timer-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, #ef4444, transparent);
            animation: timer-scan 2s linear infinite;
        }

        .timer-card::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 50% 0%, rgba(239, 68, 68, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        @keyframes timer-pulse {
            0%, 100% {
                box-shadow: 
                    0 0 60px rgba(239, 68, 68, 0.15),
                    0 25px 50px -12px rgba(0, 0, 0, 0.5);
            }
            50% {
                box-shadow: 
                    0 0 80px rgba(239, 68, 68, 0.25),
                    0 25px 50px -12px rgba(0, 0, 0, 0.5);
            }
        }

        @keyframes timer-scan {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .timer-label {
            position: relative;
            z-index: 1;
            font-size: 12px;
            color: #ef4444;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            margin-bottom: 20px;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .timer-label::before {
            content: '⚠';
            font-size: 14px;
        }

        .timer-display {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .timer-unit {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
        }

        .timer-value {
            background: rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(239, 68, 68, 0.2);
            border-radius: 12px;
            padding: 16px 20px;
            min-width: 90px;
        }

        .timer-value span {
            font-size: 52px;
            font-weight: 800;
            font-variant-numeric: tabular-nums;
            letter-spacing: -0.02em;
            background: linear-gradient(180deg, #ffffff 0%, #fca5a5 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
        }

        .timer-unit-label {
            font-size: 11px;
            color: #71717a;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-weight: 500;
        }

        .timer-separator {
            font-size: 40px;
            font-weight: 700;
            color: #ef4444;
            margin-bottom: 24px;
            animation: blink 1s step-end infinite;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        .timer-note {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            font-size: 13px;
            color: #71717a;
            margin-top: 24px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .timer-note svg {
            width: 14px;
            height: 14px;
            stroke: #ef4444;
        }

        .timer-note span {
            color: #a1a1aa;
        }

        @media (max-width: 500px) {
            .timer-card {
                padding: 28px 20px;
            }
            .timer-value {
                min-width: 70px;
                padding: 12px 14px;
            }
            .timer-value span {
                font-size: 36px;
            }
            .timer-separator {
                font-size: 28px;
            }
            .timer-display {
                gap: 8px;
            }
        }

        /* Formations Section */
        .formations-section {
            padding: 40px 0 60px;
        }

        .section-label {
            text-align: center;
            font-size: 13px;
            color: #71717a;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 32px;
        }

        .formations-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
            margin-bottom: 48px;
        }

        .formation-item {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 16px;
            padding: 20px 24px;
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.2s ease;
        }

        .formation-item:hover {
            background: rgba(255, 255, 255, 0.04);
            border-color: rgba(255, 255, 255, 0.1);
        }

        .formation-image {
            width: 100px;
            height: 100px;
            border-radius: 12px;
            object-fit: cover;
            flex-shrink: 0;
        }

        .formation-content {
            flex: 1;
            min-width: 0;
        }

        .formation-name {
            font-size: 18px;
            font-weight: 600;
            color: #fafafa;
            margin-bottom: 6px;
        }

        .formation-desc {
            font-size: 15px;
            color: #a1a1aa;
            line-height: 1.6;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .formation-price {
            font-size: 16px;
            color: #52525b;
            text-decoration: line-through;
            flex-shrink: 0;
            font-weight: 500;
        }

        .formation-check {
            width: 28px;
            height: 28px;
            background: rgba(34, 197, 94, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .formation-check svg {
            width: 14px;
            height: 14px;
            stroke: #22c55e;
            stroke-width: 3;
        }

        /* Expandable Formation Card */
        .formation-item.expandable {
            flex-wrap: wrap;
            cursor: pointer;
        }

        .formation-item.expandable .formation-row {
            display: flex;
            align-items: center;
            gap: 20px;
            width: 100%;
        }

        .formation-toggle {
            width: 28px;
            height: 28px;
            background: rgba(251, 191, 36, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            transition: all 0.3s ease;
        }

        .formation-toggle svg {
            width: 14px;
            height: 14px;
            stroke: #fbbf24;
            stroke-width: 2.5;
            transition: transform 0.3s ease;
        }

        .formation-item.expandable.expanded .formation-toggle {
            background: rgba(251, 191, 36, 0.25);
        }

        .formation-item.expandable.expanded .formation-toggle svg {
            transform: rotate(180deg);
        }

        .formation-details {
            width: 100%;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease, padding 0.3s ease;
            padding: 0 0 0 120px;
        }

        .formation-item.expandable.expanded .formation-details {
            max-height: 500px;
            padding: 20px 0 0 120px;
        }

        .formation-details-content {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.06);
        }

        .formation-details h4 {
            font-size: 14px;
            font-weight: 600;
            color: #fbbf24;
            margin-bottom: 12px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .formation-details ul {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .formation-details li {
            font-size: 14px;
            color: #a1a1aa;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .formation-details li svg {
            width: 16px;
            height: 16px;
            stroke: #22c55e;
            flex-shrink: 0;
            margin-top: 2px;
        }

        @media (max-width: 600px) {
            .formation-details {
                padding: 0 0 0 0;
            }
            
            .formation-item.expandable.expanded .formation-details {
                padding: 16px 0 0 0;
            }
        }

        /* Mobile adjustments */
        @media (max-width: 600px) {
            .formation-item {
                padding: 16px;
                gap: 14px;
            }
            
            .formation-image {
                width: 70px;
                height: 70px;
            }
            
            .formation-name {
                font-size: 15px;
            }
            
            .formation-desc {
                font-size: 13px;
                -webkit-line-clamp: 2;
            }
            
            .formation-price {
                font-size: 14px;
            }
        }

        /* Value Statement */
        .value-statement {
            text-align: center;
            margin: 48px 0;
            padding: 0 20px;
        }

        .value-statement h2 {
            font-size: 28px;
            line-height: 1.4;
            color: #fafafa;
            max-width: 700px;
            margin: 0 auto 16px;
            font-weight: 500;
            letter-spacing: -0.02em;
        }

        .value-statement h2 .highlight {
            color: #fbbf24;
            font-weight: 700;
        }

        .value-statement h3 {
            font-size: 18px;
            line-height: 1.5;
            color: rgba(250, 250, 250, 0.6);
            max-width: 600px;
            margin: 0 auto;
            font-weight: 400;
        }

        @media (max-width: 768px) {
            .value-statement h2 {
                font-size: 22px;
            }
            .value-statement h3 {
                font-size: 16px;
            }
        }

        /* Value Highlights Section */
        .value-highlights {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin: 48px 0;
            padding: 32px 24px;
            background: rgba(251, 191, 36, 0.05);
            border: 1px solid rgba(251, 191, 36, 0.15);
            border-radius: 16px;
        }

        .value-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            text-align: center;
        }

        .value-icon {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(251, 191, 36, 0.15);
            border-radius: 12px;
        }

        .value-icon svg {
            width: 24px;
            height: 24px;
            color: #fbbf24;
            stroke: #fbbf24;
        }

        .value-text {
            font-size: 15px;
            font-weight: 600;
            color: #fafafa;
            line-height: 1.4;
        }

        .value-text span {
            color: #fbbf24;
            font-weight: 700;
        }

        @media (max-width: 768px) {
            .value-highlights {
                flex-direction: column;
                gap: 24px;
                padding: 24px 20px;
            }

            .value-item {
                flex-direction: row;
                text-align: left;
                gap: 16px;
            }

            .value-icon {
                width: 44px;
                height: 44px;
                flex-shrink: 0;
            }
        }

        /* Price Card - Premium Design */
        .price-card {
