    <script>
        // 24h Countdown basé sur localStorage/cookies (sans vérification de token)
        (function() {
            const STORAGE_KEY = 'pack_complet_noel_timer_start';
            const COOKIE_KEY = 'pack_complet_noel_timer_start';
            const DURATION = 24 * 60 * 60 * 1000; // 24 heures en ms
            
            // Fonction pour obtenir le cookie
            function getCookie(name: string): string | null {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) return parts.pop()?.split(';').shift() || null;
                return null;
            }
            
            // Fonction pour définir le cookie
            function setCookie(name: string, value: string, days: number = 1): void {
                const expires = new Date();
                expires.setTime(expires.getTime() + (days * 24 * 60 * 60 * 1000));
                document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/`;
            }
            
            // Récupérer le temps de départ depuis localStorage ou cookie
            let startTime: string | null = localStorage.getItem(STORAGE_KEY);
            if (!startTime) {
                startTime = getCookie(COOKIE_KEY);
            }
            
            // Si pas de timer existant, créer un nouveau
            if (!startTime) {
                startTime = Date.now().toString();
                localStorage.setItem(STORAGE_KEY, startTime);
                setCookie(COOKIE_KEY, startTime, 1);
            } else {
                // Synchroniser localStorage et cookie
                localStorage.setItem(STORAGE_KEY, startTime);
                setCookie(COOKIE_KEY, startTime, 1);
            }
            
            const startTimeNum: number = parseInt(startTime, 10);
            const endTime: number = startTimeNum + DURATION;
            
            function updateCountdown(): void {
                const now: number = Date.now();
                const remaining: number = endTime - now;
                
                if (remaining <= 0) {
                    updateAllDisplays(0, 0, 0);
                    return;
                }
                
                const hours: number = Math.floor(remaining / (1000 * 60 * 60));
                const minutes: number = Math.floor((remaining % (1000 * 60 * 60)) / (1000 * 60));
                const seconds: number = Math.floor((remaining % (1000 * 60)) / 1000);
                
                updateAllDisplays(hours, minutes, seconds);
            }
            
            function updateAllDisplays(hours: number, minutes: number, seconds: number): void {
                const hoursStr: string = String(hours).padStart(2, '0');
                const minutesStr: string = String(minutes).padStart(2, '0');
                const secondsStr: string = String(seconds).padStart(2, '0');
                const display: string = `${hoursStr}:${minutesStr}:${secondsStr}`;
                
                // Update separated timer elements
                const timerHours = document.getElementById('timerHours');
                const timerMinutes = document.getElementById('timerMinutes');
                const timerSeconds = document.getElementById('timerSeconds');
                
                if (timerHours) timerHours.textContent = hoursStr;
                if (timerMinutes) timerMinutes.textContent = minutesStr;
                if (timerSeconds) timerSeconds.textContent = secondsStr;
                
                // Update legacy single-string displays
                const stickyCountdown = document.getElementById('stickyCountdown');
                const finalCountdown = document.getElementById('finalCountdown');
                
                if (stickyCountdown) stickyCountdown.textContent = display;
                if (finalCountdown) finalCountdown.textContent = display;
            }
            
            // Démarrer le countdown
            updateCountdown();
            setInterval(updateCountdown, 1000);
        })();
        
