---
import CCLayout from '../../layouts/CCLayout.astro';
---

<CCLayout image="/media/newsletter/court-circuit-34.gif">
  <div slot="before-image" class="custom-title-section">
    <h1 class="custom-title">Besoin d'un coup de main ?!</h1>
  </div>
</CCLayout>

<style>
  .custom-title-section {
    text-align: center;
    padding: 0 20px 30px 20px;
    width: 100%;
  }

  .custom-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 48px;
    color: #ffffff;
    margin: 0;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .custom-title {
      font-size: 36px;
    }
  }

  @media (max-width: 480px) {
    .custom-title {
      font-size: 28px;
    }
    
    .custom-title-section {
      padding: 30px 20px;
    }
  }
</style>
