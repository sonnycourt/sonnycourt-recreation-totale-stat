<!-- Tracking des visites -->
<script is:inline>
  (function() {
    try {
      const page = window.location.pathname;
      if (navigator.sendBeacon) {
        navigator.sendBeacon('/.netlify/functions/track', JSON.stringify({ page }));
      } else {
        fetch('/.netlify/functions/track', {
          method: 'POST',
          body: JSON.stringify({ page }),
          keepalive: true
        });
      }
    } catch (e) {}
  })();
</script>

<!-- Tracking activit√© subscriber -->
<script is:inline>
  (function() {
    try {
      const params = new URLSearchParams(window.location.search);
      const email = params.get('e');
      if (email) {
        fetch('/.netlify/functions/track-activity?email=' + encodeURIComponent(email));
      }
    } catch (e) {}
  })();
</script>

<!-- Share functionality -->
<script>
  const shareUrl = 'https://sonnycourt.com/court-circuit';
  const shareTitle = 'Court-Circuit';
  const shareText = 'Je te partage un truc que j\'aime bien. C\'est une newsletter quotidienne sur le mindset et le subconscient. √áa prend 1 min √† lire, c\'est enrichissant, c\'est dr√¥le et c\'est gratuit.';
  
  const shareBtn = document.getElementById('shareBtn');
  const shareButtons = document.getElementById('shareButtons');
  const whatsappBtn = document.getElementById('whatsappBtn');
  const emailBtn = document.getElementById('emailBtn');
  const copyBtn = document.getElementById('copyBtn');
  const copyText = document.getElementById('copyText');
  
  // Web Share API (mobile natif)
  shareBtn?.addEventListener('click', async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: shareTitle,
          text: shareText,
          url: shareUrl
        });
      } catch (err) {
        // User cancelled ou erreur - on fait rien
      }
    } else {
      // Fallback: on montre les boutons alternatifs
      shareButtons?.classList.add('show');
    }
  });
  
  // WhatsApp
  const whatsappMessage = encodeURIComponent(`${shareText}\n\n${shareUrl}`);
  if (whatsappBtn) {
    whatsappBtn.href = `https://wa.me/?text=${whatsappMessage}`;
  }
  
  // Email
  const emailSubject = encodeURIComponent('Une newsletter que j\'aime bien üí°');
  const emailBody = encodeURIComponent(`${shareText}\n\n${shareUrl}`);
  if (emailBtn) {
    emailBtn.href = `mailto:?subject=${emailSubject}&body=${emailBody}`;
  }
  
  // Copier le lien
  copyBtn?.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(shareUrl);
      if (copyText) {
        copyText.textContent = 'Copi√© ! ‚úì';
        setTimeout(() => {
          copyText.textContent = 'Copier le lien';
        }, 2000);
      }
    } catch (err) {
      // Fallback pour vieux navigateurs
      const textarea = document.createElement('textarea');
      textarea.value = shareUrl;
      document.body.appendChild(textarea);
      textarea.select();
      document.execCommand('copy');
      document.body.removeChild(textarea);
      if (copyText) {
        copyText.textContent = 'Copi√© ! ‚úì';
        setTimeout(() => {
          copyText.textContent = 'Copier le lien';
        }, 2000);
      }
    }
  });
  
  // Sur desktop, on affiche directement les boutons
  if (typeof navigator.share !== 'function') {
    shareButtons?.classList.add('show');
    if (shareBtn) shareBtn.style.display = 'none';
  }
</script>

<style>
  .court-circuit-page {
    min-height: 100vh;
    padding-top: 100px;
    padding-bottom: 60px;
    background: #000;
  }

  /* Image Section */
  .image-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    margin-bottom: 40px;
  }

  .image-container {
    max-width: 600px;
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .main-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Share Section */
  .share-section {
    padding: 20px 20px 60px;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .share-container {
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 32px 24px;
    text-align: center;
  }
  
  .share-header {
    margin-bottom: 24px;
  }
  
  .share-icon {
    display: block;
    margin-bottom: 12px;
    color: #25D366;
  }
  
  .share-icon svg {
    width: 40px;
    height: 40px;
  }
  
  .share-header h3 {
    font-size: 22px;
    font-weight: 700;
    color: #fff;
    margin: 0 0 8px 0;
  }
  
  .share-header p {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }
  
  /* Bouton principal */
  .share-main-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    padding: 16px 24px;
    background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 16px;
  }
  
  .share-main-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 122, 255, 0.4);
  }
  
  .share-main-btn:active {
    transform: translateY(0);
  }
  
  /* Boutons alternatifs */
  .share-buttons {
    display: none;
    flex-wrap: wrap;
    gap: 12px;
    justify-content: center;
  }
  
  .share-buttons.show {
    display: flex;
  }
  
  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }
  
  .share-btn.whatsapp {
    background: #25D366;
    color: #fff;
  }
  
  .share-btn.whatsapp:hover {
    background: #20bd5a;
    transform: translateY(-2px);
  }
  
  .share-btn.email {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .share-btn.email:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }
  
  .share-btn.copy {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .share-btn.copy:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .milestone-title {
    text-align: center;
    color: #fff;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 24px;
    line-height: 1.4;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .milestone-title .milestone-icon {
    flex-shrink: 0;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .court-circuit-page {
      padding-top: 80px;
    }

    .image-container {
      max-width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    .share-section {
      padding: 20px 16px 50px;
    }
    
    .share-container {
      padding: 24px 20px;
    }
    
    .share-header h3 {
      font-size: 20px;
    }
    
    .share-btn {
      flex: 1;
      min-width: calc(50% - 6px);
      justify-content: center;
    }
  }
</style>
