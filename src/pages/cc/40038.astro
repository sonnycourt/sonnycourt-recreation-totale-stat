<!-- Countdown Timer -->
<script is:inline>
  (function() {
    // Set countdown to 24 hours from first visit (persisted)
    const storageKey = 'promo_40038_end';
    let endTime = localStorage.getItem(storageKey);
    
    if (!endTime) {
      endTime = Date.now() + 24 * 60 * 60 * 1000; // 24 hours
      localStorage.setItem(storageKey, endTime);
    } else {
      endTime = parseInt(endTime, 10);
    }
    
    let expired = false;
    
    function disableOffer() {
      if (expired) return;
      expired = true;
      
      // Grey out all CTA buttons
      const ctaMain = document.querySelector('.cta-main');
      const ctaFinal = document.querySelector('.cta-final');
      
      if (ctaMain) {
        ctaMain.style.background = '#4a4a4a';
        ctaMain.style.boxShadow = 'none';
        ctaMain.style.cursor = 'not-allowed';
        ctaMain.style.pointerEvents = 'none';
        ctaMain.querySelector('.cta-text').textContent = 'Offre expir√©e';
      }
      
      if (ctaFinal) {
        ctaFinal.style.background = '#4a4a4a';
        ctaFinal.style.boxShadow = 'none';
        ctaFinal.style.cursor = 'not-allowed';
        ctaFinal.style.pointerEvents = 'none';
        ctaFinal.textContent = 'Offre expir√©e';
      }
      
      // Update promo banner
      const promoDiscount = document.querySelector('.promo-discount');
      if (promoDiscount) {
        promoDiscount.style.color = '#6b7280';
        promoDiscount.style.textShadow = 'none';
      }
      
      // Update urgency card
      const urgencyTitle = document.querySelector('.urgency-title');
      if (urgencyTitle) {
        urgencyTitle.textContent = 'Cette offre a expir√©';
        urgencyTitle.style.color = '#6b7280';
      }
      
      const urgencyText = document.querySelector('.urgency-text');
      if (urgencyText) {
        urgencyText.textContent = 'Tu peux toujours acc√©der √† la formation au prix normal.';
      }
    }
    
    function updateCountdown() {
      const now = Date.now();
      const diff = endTime - now;
      
      if (diff <= 0) {
        document.getElementById('hours').textContent = '00';
        document.getElementById('minutes').textContent = '00';
        document.getElementById('seconds').textContent = '00';
        disableOffer();
        return;
      }
      
      const hours = Math.floor(diff / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      
      document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
      document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
      document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
    }
    
    updateCountdown();
    setInterval(updateCountdown, 1000);
  })();
</script>

