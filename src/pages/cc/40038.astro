        navigator.sendBeacon('/.netlify/functions/track', JSON.stringify({ page }));
      } else {
        fetch('/.netlify/functions/track', {
          method: 'POST',
          body: JSON.stringify({ page }),
          keepalive: true
        });
      }
    } catch (e) {}
  })();
</script>

