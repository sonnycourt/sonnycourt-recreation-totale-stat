          }

          displayData(data);

          // Synchroniser toutes les minutes
          setInterval(async () => {
            try {
              const syncResponse = await fetch(`/.netlify/functions/check-ssr-access?token=${encodeURIComponent(token || '')}`);
              const syncData = await syncResponse.json();
              if (syncData.valid) {
