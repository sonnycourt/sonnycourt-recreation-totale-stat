---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Esprit Subconscient - Checkout" description="Accède à la formation Esprit Subconscient - 21 jours pour reprogrammer ton subconscient." showHeader={false} showFooter={false}>
  <div class="checkout-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <div class="hero-badge">FORMATION NIVEAU 1</div>
        <h1 class="hero-title">ESPRIT SUBCONSCIENT</h1>
        <p class="hero-subtitle">21 JOURS POUR REPROGRAMMER TON SUBCONSCIENT ET TRANSFORMER TA VIE</p>
        
        <div class="hero-image-container">
          <img src="/media/pages/Sonny-Court-Manifest-Formation-2.webp" alt="Formation Esprit Subconscient - Sonny Court" class="hero-image" />
        </div>
      </div>
    </section>

    <!-- Checkout Section -->
    <section class="checkout-section">
      <div class="checkout-container">
        <h2 class="checkout-title">Finalise ton inscription</h2>
        <p class="checkout-subtitle">Remplis le formulaire ci-dessous pour accéder à la formation</p>
        
        <div class="spiffy-wrapper">
          <spiffy-checkout url="https://sonnycourt.spiffy.co/checkout/esprit-subconscient"></spiffy-checkout>
        </div>
        
        <p class="checkout-guarantee">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 6 9 17l-5-5"/>
          </svg>
          7 jours garantie satisfait ou remboursé
        </p>
      </div>
    </section>
  </div>

  <!-- Spiffy Checkout Script -->
  <script src="https://cdn.spiffy.co/checkout-embed.js" defer></script>
</Layout>

<style>
  .checkout-page {
    min-height: 100vh;
    background: linear-gradient(180deg, #0a0a1a 0%, #1a1a3a 50%, #0a0a1a 100%);
    color: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    padding: 60px 20px 40px;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    padding: 8px 20px;
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.4);
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 2px;
    color: #60a5fa;
    margin-bottom: 24px;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 16px;
    background: linear-gradient(135deg, #ffffff 0%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 1px;
    margin-bottom: 32px;
  }

  .hero-image-container {
    max-width: 400px;
    margin: 0 auto;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(59, 130, 246, 0.3);
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Checkout Section */
  .checkout-section {
    padding: 40px 20px 80px;
  }

  .checkout-container {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .checkout-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: #ffffff;
  }

  .checkout-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 32px;
  }

  .spiffy-wrapper {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 16px;
    padding: 24px;
    margin-bottom: 24px;
  }

  /* Spiffy Checkout Styling */
  spiffy-checkout {
    display: block;
    min-height: 400px;
  }

  .checkout-guarantee {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .checkout-guarantee svg {
    color: #22c55e;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero-section {
      padding: 40px 16px 32px;
    }

    .hero-image-container {
      max-width: 300px;
    }

    .checkout-section {
      padding: 32px 16px 60px;
    }

    .spiffy-wrapper {
      padding: 16px;
    }
  }
</style>

