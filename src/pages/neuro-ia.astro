    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            --color-bg: #0A0A0F;
            --color-bg-light: #131319;
            --color-surface: #1A1A24;
            --color-surface-light: #232333;
            --color-white: #FFFFFF;
            --color-text: #FFFFFF;
            --color-text-secondary: #8A8A9E;
            --color-primary: #5E5CE6;
            --color-primary-glow: #7C7AFF;
            --color-accent: #00F5FF;
            --color-gradient-1: #667EEA;
            --color-gradient-2: #764BA2;
            --color-gradient-3: #F093FB;
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            --glow: 0 0 40px rgba(94, 92, 230, 0.5);
            --glow-strong: 0 0 80px rgba(94, 92, 230, 0.8);
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "SF Pro Text", "Helvetica Neue", Helvetica, Arial, sans-serif;
            background: var(--color-bg);
            color: var(--color-text);
            line-height: 1.6;
            font-size: 17px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            overflow-x: hidden;
        }
        
        /* Noise Texture Overlay */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.03;
            z-index: 1;
            pointer-events: none;
            background: url('data:image/svg+xml;base64,');
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
            position: relative;
            z-index: 2;
        }
        
        /* Typography with gradient */
        h1 {
            font-size: clamp(48px, 8vw, 96px);
            line-height: 1.05;
            font-weight: 700;
            letter-spacing: -0.03em;
            background: linear-gradient(135deg, #FFFFFF 0%, #8A8A9E 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        h2 {
            font-size: clamp(36px, 6vw, 64px);
            line-height: 1.1;
            font-weight: 700;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, #FFFFFF 0%, #B8B8D0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        h3 {
            font-size: clamp(24px, 4vw, 36px);
            line-height: 1.2;
            font-weight: 600;
            letter-spacing: -0.01em;
        }
        
        p {
            font-size: 18px;
            line-height: 1.7;
            color: var(--color-text-secondary);
        }
        
        /* Hero Section with animated background */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            background: radial-gradient(ellipse at top, var(--color-bg-light) 0%, var(--color-bg) 70%);
        }
        
        /* Animated Mesh Gradient */
        .hero-bg {
            position: absolute;
            width: 200%;
            height: 200%;
            top: -50%;
            left: -50%;
            background: conic-gradient(from 180deg at 50% 50%, #5E5CE6 0deg, #00F5FF 60deg, #F093FB 120deg, #764BA2 180deg, #667EEA 240deg, #5E5CE6 360deg);
            filter: blur(100px);
            opacity: 0.3;
            animation: rotate 20s linear infinite;
        }
        
        @keyframes rotate {
            to { transform: rotate(360deg); }
        }
        
        /* Floating Orbs */
        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(40px);
            opacity: 0.6;
            animation: float 20s infinite ease-in-out;
        }
        
        .orb1 {
            width: 400px;
            height: 400px;
            background: linear-gradient(135deg, #667EEA, #764BA2);
            top: -200px;
            left: -200px;
            animation-delay: 0s;
        }
        
        .orb2 {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #F093FB, #F5576C);
            bottom: -150px;
            right: -150px;
            animation-delay: 5s;
        }
        
        .orb3 {
            width: 250px;
            height: 250px;
            background: linear-gradient(135deg, #00F5FF, #5E5CE6);
            top: 50%;
            left: 50%;
            animation-delay: 10s;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            25% { transform: translate(100px, -100px) scale(1.1); }
            50% { transform: translate(-100px, 100px) scale(0.9); }
            75% { transform: translate(50px, 50px) scale(1.05); }
        }
        
        /* Hero Content */
        .hero-content {
            text-align: center;
            position: relative;
            z-index: 10;
            max-width: 1000px;
            /* Animation removed - causes centering issues */
        }
        
        /* heroEntry animation removed - causes centering issues */
        
        .hero-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            background: rgba(94, 92, 230, 0.1);
            border: 1px solid rgba(94, 92, 230, 0.3);
            color: var(--color-primary-glow);
            padding: 12px 24px;
            border-radius: 100px;
            font-size: 14px;
            font-weight: 600;
            letter-spacing: 1px;
            margin: 0 auto 32px auto;
            backdrop-filter: blur(10px);
            /* Animation removed - causes centering issues */
        }
        
        /* pulse animation removed - causes centering issues */
        
        .hero-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            background: var(--color-accent);
            border-radius: 50%;
            /* Animation removed - causes centering issues */
        }
        
        /* blink animation removed - causes centering issues */
        
        .hero h1 {
            margin-bottom: 32px;
            animation: textReveal 1s ease-out 0.3s both;
        }
        
        @keyframes textReveal {
            from {
                opacity: 0;
                transform: translateY(30px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }
        
        .hero-subtitle {
            font-size: 24px;
            color: var(--color-text-secondary);
            margin-bottom: 48px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
            animation: textReveal 1s ease-out 0.5s both;
        }
        
        /* Premium Button */
        .btn {
            display: inline-block;
            position: relative;
            padding: 20px 48px;
            font-size: 17px;
            font-weight: 600;
            text-decoration: none;
            color: white;
            background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-glow) 100%);
            border-radius: 100px;
            transition: var(--transition);
            overflow: hidden;
            animation: textReveal 1s ease-out 0.7s both;
            box-shadow: 0 4px 15px rgba(94, 92, 230, 0.3);
        }
        
        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }
        
        .btn:hover {
            transform: translateY(-2px) scale(1.02);
            box-shadow: var(--glow-strong);
        }
        
        .btn:hover::before {
            left: 100%;
        }
        
        .btn-secondary {
            background: transparent;
            border: 2px solid var(--color-primary);
            color: var(--color-primary-glow);
            backdrop-filter: blur(10px);
        }
        
        .btn-secondary:hover {
            background: rgba(94, 92, 230, 0.1);
            border-color: var(--color-primary-glow);
            box-shadow: inset 0 0 30px rgba(94, 92, 230, 0.2), var(--glow);
        }
        
        /* Hero Image/Video Placeholder */
        .hero-visual {
            margin: 40px 0;
            position: relative;
            /* Animation removed - causes centering issues */
        }
        
        .hero-image {
            width: 800px;
            height: 450px;
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            margin: 0 auto; /* Center the container itself */
        }
        
        .hero-cover-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 24px;
            /* Remove all object-fit properties that could cause issues */
        }
        
        /* Border animation removed - causes centering issues */
        
        /* Sections */
        section {
            padding: 120px 0;
            position: relative;
            z-index: 2;
        }
        
        /* Glass Card Effect */
        .glass-card {
            background: rgba(26, 26, 36, 0.6);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 48px;
            position: relative;
            overflow: hidden;
            transition: var(--transition);
        }
        
        .glass-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: shimmer 3s infinite;
        }
        
        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }
        
        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            border-color: rgba(94, 92, 230, 0.3);
        }
        
        /* Problem Section with gradient background */
        .problem-section {
            background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-light) 50%, var(--color-bg) 100%);
            position: relative;
        }
        
        .problem-content {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }
        
        .problem-content p {
            margin-bottom: 24px;
            font-size: 20px;
            animation: fadeInUp 0.8s ease-out;
            animation-fill-mode: both;
        }
        
        .problem-content p:nth-child(1) { animation-delay: 0.1s; }
        .problem-content p:nth-child(2) { animation-delay: 0.2s; }
        .problem-content p:nth-child(3) { animation-delay: 0.3s; }
        .problem-content p:nth-child(4) { animation-delay: 0.4s; }
        .problem-content p:nth-child(5) { animation-delay: 0.5s; }
        .problem-content p:nth-child(6) { animation-delay: 0.6s; }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .highlight-text {
            color: var(--color-primary-glow);
            font-weight: 600;
            position: relative;
            display: inline-block;
        }
        
        .highlight-text::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.3s ease;
        }
        
        .highlight-text:hover::after {
            transform: scaleX(1);
        }
        
        /* Solution Section with 3D cards */
        .solution-section {
            background: var(--color-bg);
            position: relative;
            overflow: hidden;
        }
        
        .solution-section::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 800px;
            height: 800px;
            background: radial-gradient(circle, rgba(94, 92, 230, 0.1) 0%, transparent 70%);
            transform: translate(-50%, -50%);
            animation: pulse 10s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: translate(-50%, -50%) scale(1); }
            50% { transform: translate(-50%, -50%) scale(1.2); }
        }
        
        /* Process Steps with 3D effect */
        .process-steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 32px;
            margin-top: 80px;
        }
        
        .process-step {
            background: linear-gradient(135deg, rgba(26, 26, 36, 0.8) 0%, rgba(35, 35, 51, 0.8) 100%);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 32px;
            position: relative;
            transform-style: preserve-3d;
            transition: var(--transition);
            cursor: pointer;
        }
        
        .process-step::before {
            content: '';
            position: absolute;
            inset: -1px;
            border-radius: 20px;
            padding: 1px;
            background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: exclude;
            mask-composite: exclude;
            opacity: 0;
            transition: opacity 0.3s;
        }
        
        .process-step:hover::before {
            opacity: 1;
        }
        
        .process-step:hover {
            transform: translateY(-8px) rotateX(-5deg);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
        }
        
        .process-step-number {
            min-width: 120px;
            height: 48px;
            padding: 0 16px;
            background: rgba(26, 26, 36, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 24px;
            color: white;
        }

        .process-step-image {
            width: 100%;
            height: 180px;
            margin-bottom: 24px;
            border-radius: 16px;
            overflow: hidden;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(26, 26, 36, 0.3);
        }

        .process-step-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            transition: transform 0.3s ease;
            background: rgba(255, 255, 255, 0.02);
        }

        .process-step:hover .process-step-image img {
            transform: scale(1.05);
        }
        
        /* Modules Section with premium cards */
        .modules-section {
            background: linear-gradient(180deg, var(--color-bg-light) 0%, var(--color-bg) 100%);
            position: relative;
        }
        
        .modules-grid {
            display: grid;
            gap: 32px;
            margin-top: 80px;
        }
        
        .module-card {
            background: linear-gradient(135deg, rgba(26, 26, 36, 0.9) 0%, rgba(35, 35, 51, 0.9) 100%);
            border-radius: 24px;
            padding: 72px;
            position: relative;
            overflow: hidden;
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.05);
            cursor: pointer;
        }
        
        .module-card::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(94, 92, 230, 0.1) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.3s;
            pointer-events: none;
        }
        
        .module-card:hover::after {
            opacity: 1;
        }
        
        .module-card:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 20px 40px rgba(94, 92, 230, 0.2);
            border-color: rgba(94, 92, 230, 0.3);
        }
        
        .module-number {
            color: var(--color-accent);
            font-size: 16px;
            font-weight: 700;
            letter-spacing: 2px;
            margin-bottom: 24px;
            text-transform: uppercase;
        }
        
        .module-image {
            width: 100%;
            height: 240px;
            background: linear-gradient(135deg, rgba(94, 92, 230, 0.1) 0%, rgba(0, 245, 255, 0.1) 100%);
            border-radius: 16px;
            margin-bottom: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-text-secondary);
            font-size: 18px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        /* Included Items with glow effect */
        .included-section {
            background: var(--color-bg);
            position: relative;
        }
        
        .included-items {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
            margin-bottom: 80px;
        }
        
        .included-item {
            background: linear-gradient(135deg, rgba(26, 26, 36, 0.6) 0%, rgba(35, 35, 51, 0.6) 100%);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 48px;
            text-align: center;
            position: relative;
            transition: var(--transition);
        }
        
        .included-item:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: var(--glow);
            border-color: rgba(94, 92, 230, 0.5);
        }
        
        /* New Bonus Showcase Design */
        .bonus-showcase {
            display: flex;
            flex-direction: column;
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .bonus-main {
            width: 100%;
        }

        .bonus-hero-image {
            position: relative;
            width: 100%;
            height: 500px;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .main-bonus-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center center;
        }

        .bonus-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
            padding: 40px 30px 30px;
            color: white;
        }

        .bonus-count {
            display: inline-block;
            background: var(--color-accent);
            color: var(--color-bg);
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 16px;
        }

        .bonus-overlay h3 {
            color: white;
            font-size: 2rem;
            margin-bottom: 12px;
            font-weight: 700;
        }

        .bonus-overlay p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
            margin-bottom: 16px;
            line-height: 1.6;
        }

        .bonus-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 30px;
        }

        .bonus-card {
            background: rgba(26, 26, 36, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .bonus-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            border-color: rgba(94, 92, 230, 0.3);
        }

        .bonus-card-image {
            height: 280px;
            overflow: hidden;
        }

        .card-bonus-img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center center;
            transition: transform 0.3s ease;
            background: rgba(255, 255, 255, 0.02);
        }

        .bonus-card:hover .card-bonus-img {
            transform: scale(1.05);
        }

        .bonus-card-content {
            padding: 28px;
        }

        .bonus-card h4 {
            color: var(--color-text);
            font-size: 1.3rem;
            margin-bottom: 12px;
            font-weight: 600;
        }

        .bonus-card p {
            color: var(--color-text-secondary);
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 16px;
        }

        .bonus-value {
            background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
            color: var(--color-bg);
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
            display: inline-block;
        }
        
        /* Old included-value style - now using bonus-value */
        
        /* Pricing Box Premium - Redesigned */
        .pricing-box {
            background: rgba(26, 26, 36, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 48px;
            text-align: center;
            max-width: 600px;
            margin: 0 auto;
            position: relative;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .pricing-header {
            margin-bottom: 32px;
        }

        .pricing-total {
            color: rgba(255, 255, 255, 0.6);
            font-size: 18px;
            text-decoration: line-through;
            margin-bottom: 12px;
            font-weight: 500;
        }

