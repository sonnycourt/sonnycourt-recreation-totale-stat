        // Configuration Spiffy pour ouvrir dans le m√™me onglet
        document.addEventListener('DOMContentLoaded', function() {
            // Intercepter tous les liens Spiffy et forcer l'ouverture dans le m√™me onglet
            const spiffyLinks = document.querySelectorAll('a[href*="spiffy.co"]');
            spiffyLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Laisser Spiffy g√©rer le clic mais forcer le m√™me onglet
                    this.setAttribute('target', '_self');
                });
            });
        });

        // Add fade-in animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        document.querySelectorAll('.fade-in').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'all 0.6s ease-out';
            observer.observe(el);
        });

        // Countdown Timer
        function startCountdown() {
            let totalSeconds = 5 * 60; // 5 minutes

            const minutesElementNew = document.getElementById('minutes-new');
            const secondsElementNew = document.getElementById('seconds-new');

            const countdown = setInterval(() => {
                const minutes = Math.floor(totalSeconds / 60);
                const seconds = totalSeconds % 60;

                const timeString = minutes.toString().padStart(2, '0');
                const secondsString = seconds.toString().padStart(2, '0');

                if (minutesElementNew) minutesElementNew.textContent = timeString;
                if (secondsElementNew) secondsElementNew.textContent = secondsString;

                totalSeconds--;

                if (totalSeconds < 0) {
                    clearInterval(countdown);
                    const zeroString = '00';
                    if (minutesElementNew) minutesElementNew.textContent = zeroString;
                    if (secondsElementNew) secondsElementNew.textContent = zeroString;

                    // Redirection automatique en cliquant sur le bouton secondaire
                    const nonButton = document.querySelector('.cta-secondary');
                    if (nonButton) {
                        nonButton.click();
                    }
                }
            }, 1000);
        }

        // Start countdown when page loads
        document.addEventListener('DOMContentLoaded', startCountdown);
    </script>
