---
/**
 * Page de partage Court-Circuit
 * Affiche le meme en grand avec un CTA pour s'inscrire
 * 
 * Cette page est partagée par les abonnés à leurs amis
 */
import Layout from '../../layouts/Layout.astro';

// Fonction pour calculer l'image à partir de l'ID
// Pattern: 40008 → index 0, 40018 → index 1, etc.
function getImageForId(id: string): string {
  const numId = parseInt(id, 10);
  const index = (numId - 40008) / 10;
  
  // Cas spéciaux (typos ou nommage différent dans les fichiers existants)
  const overrides: Record<number, string> = {
    6: '/media/newsletter/Court-Circuit-6.webp',  // Majuscule
    7: '/media/newsletter/courct-circuit-7.webp', // Typo existante
  };
  
  if (overrides[index]) {
    return overrides[index];
  }
  
  return `/media/newsletter/court-circuit-${index}.webp`;
}

export function getStaticPaths() {
  // Génère automatiquement les pages de 40008 à 40998 (100 pages possibles)
  const paths = [];
  for (let i = 0; i < 100; i++) {
    const id = (40008 + i * 10).toString();
    paths.push({ params: { id } });
  }
  return paths;
}

const { id } = Astro.params;
const image = getImageForId(id as string);
---

<Layout 
  title="Court-Circuit - 1 minute pour changer ta journée" 
  description="Une newsletter quotidienne pour court-circuiter tes pensées limitantes. Rejoins +10 000 lecteurs."
  noindex={true}
>
  <div class="share-page">
    <!-- Background Effect -->
    <div class="background-glow"></div>

    <!-- Main Content -->
    <div class="content">
      <!-- Badge -->
      <div class="badge">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"/>
        </svg>
        Un ami t'a partagé ça
      </div>

      <!-- Image du meme -->
      <div class="meme-container">
        <img src={image} alt="Court-Circuit du jour" class="meme-image" />
      </div>

      <!-- CTA Section -->
      <div class="cta-section">
        <h1>Tu veux recevoir ça <span class="highlight">chaque matin</span> ?</h1>
        <p class="description">
          1 email par jour. 1 minute de lecture. 1 meme drôle.<br>
          Et surtout une grande idée pour court-circuiter tes pensées limitantes.
        </p>
        
        <a href="/court-circuit" class="cta-button">
          <span class="cta-text">Rejoindre +10 000 lecteurs</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/><path d="m12 5 7 7-7 7"/>
          </svg>
        </a>

        <p class="free-text">C'est gratuit !</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .share-page {
    min-height: 100vh;
    background: #000;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100px 20px 60px;
    position: relative;
    overflow: hidden;
  }

  .background-glow {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 150vw;
    height: 150vh;
    background: radial-gradient(circle at center, rgba(0, 122, 255, 0.15) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .content {
    position: relative;
    z-index: 1;
    max-width: 700px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(0, 122, 255, 0.15);
    border: 1px solid rgba(0, 122, 255, 0.3);
    border-radius: 50px;
    color: #007AFF;
    font-size: 14px;
    font-weight: 600;
    animation: fadeInDown 0.6s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .meme-container {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 
      0 25px 80px rgba(0, 0, 0, 0.6),
      0 0 60px rgba(0, 122, 255, 0.15);
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .meme-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .cta-section {
    text-align: center;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .cta-section h1 {
    font-size: clamp(1.5rem, 5vw, 2rem);
    font-weight: 700;
    color: #fff;
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .cta-section h1 .highlight {
    color: #007AFF;
    background: linear-gradient(135deg, #2D9AFF 0%, #007AFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .description {
    color: #8E8E93;
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 24px 0;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 18px 36px;
    background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
    color: #fff;
    text-decoration: none;
    border-radius: 14px;
    font-size: 17px;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 10px 40px rgba(0, 122, 255, 0.4);
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .cta-button:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 50px rgba(0, 122, 255, 0.5);
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button:active {
    transform: translateY(-1px) scale(1);
  }

  .free-text {
    color: #6b7280;
    font-size: 14px;
    margin: 16px 0 0 0;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .share-page {
      padding: 90px 16px 40px;
    }

    .content {
      gap: 20px;
    }

    .badge {
      padding: 8px 16px;
      font-size: 13px;
    }

    .meme-container {
      border-radius: 12px;
    }

    .cta-button {
      width: 100%;
      padding: 16px 24px;
      font-size: 16px;
    }
  }
</style>

