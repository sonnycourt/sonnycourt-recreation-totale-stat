---
// Dashboard de stats pour les pages /cc/ (newsletter)
// Acc√®s: /admin/stats
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stats Newsletter - Sonny Court</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="noindex, nofollow" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 100%);
            color: #ffffff;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 50px;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .header p {
            color: #8a8a9e;
            font-size: 1rem;
        }

        .summary-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 24px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
        }

        .card-value {
            font-size: 3rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .card-label {
            color: #8a8a9e;
            font-size: 0.9rem;
            margin-top: 8px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: #fff;
        }

        /* Chart Section */
        .chart-section {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 40px;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }

        .chart-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #fff;
            margin: 0;
        }

        .timeframe-tabs {
            display: flex;
            gap: 8px;
            background: rgba(0, 0, 0, 0.3);
            padding: 4px;
            border-radius: 10px;
        }

        .timeframe-tab {
            padding: 8px 16px;
            border: none;
            background: transparent;
            color: #8a8a9e;
            font-size: 0.85rem;
            font-weight: 500;
            cursor: pointer;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .timeframe-tab:hover {
            color: #fff;
        }

        .timeframe-tab.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
        }

        .chart-container {
            position: relative;
            height: 250px;
            margin-top: 20px;
        }

        .chart-svg {
            width: 100%;
            height: 100%;
        }

        .chart-line {
            fill: none;
            stroke: url(#lineGradient);
            stroke-width: 3;
            stroke-linecap: round;
            stroke-linejoin: round;
        }

        .chart-area {
            fill: url(#areaGradient);
        }

        .chart-grid-line {
            stroke: rgba(255, 255, 255, 0.05);
            stroke-width: 1;
        }

        .chart-dot {
            fill: #667eea;
            stroke: #fff;
            stroke-width: 2;
            cursor: pointer;
            transition: r 0.2s ease;
        }

        .chart-dot:hover {
            r: 8;
        }

        .chart-label {
            fill: #8a8a9e;
            font-size: 11px;
            text-anchor: middle;
        }

        .chart-value-label {
            fill: #fff;
            font-size: 12px;
            font-weight: 600;
            text-anchor: middle;
        }

        .y-axis-label {
            fill: #8a8a9e;
            font-size: 11px;
            text-anchor: end;
        }

        .chart-total {
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }

        .chart-total-value {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .chart-total-label {
            color: #8a8a9e;
            font-size: 0.85rem;
            margin-top: 4px;
        }

        /* Table */
        .pages-table {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 40px;
        }

        .table-header {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            padding: 16px 24px;
            background: rgba(255, 255, 255, 0.05);
            font-weight: 600;
            font-size: 0.85rem;
            color: #8a8a9e;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .table-row {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            padding: 20px 24px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            transition: background 0.2s ease;
            align-items: center;
        }

        .table-row:hover {
            background: rgba(102, 126, 234, 0.1);
        }

        .page-name a {
            color: #64b5f6;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .page-name a:hover {
            color: #90caf9;
            text-decoration: underline;
        }

        .page-number {
            color: #8a8a9e;
            font-size: 0.85rem;
            margin-left: 8px;
        }

        .visits-count {
            font-weight: 700;
            font-size: 1.2rem;
        }

        .last-visit {
            color: #8a8a9e;
            font-size: 0.9rem;
        }

        .loading {
            text-align: center;
            padding: 60px;
            color: #8a8a9e;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid rgba(102, 126, 234, 0.2);
            border-top-color: #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .error {
            background: rgba(255, 59, 48, 0.1);
            border: 1px solid rgba(255, 59, 48, 0.3);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            color: #ff3b30;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #8a8a9e;
        }

        .refresh-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            margin-top: 30px;
        }

        .refresh-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        .last-updated {
            text-align: center;
            color: #8a8a9e;
            font-size: 0.85rem;
            margin-top: 10px;
        }

        @media (max-width: 600px) {
            .header h1 { font-size: 1.8rem; }
            .card-value { font-size: 2.2rem; }
            .table-header, .table-row { grid-template-columns: 1fr 1fr; }
            .table-header > *:last-child, .table-row > *:last-child { display: none; }
            .chart-header { flex-direction: column; align-items: flex-start; }
            .timeframe-tabs { width: 100%; justify-content: space-between; }
            .timeframe-tab { padding: 8px 12px; font-size: 0.8rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üìä Stats Newsletter</h1>
            <p>Tracking des clics sur les pages Court-Circuit</p>
        </div>

        <div id="content">
            <div class="loading">
                <div class="spinner"></div>
                <p>Chargement des stats...</p>
            </div>
        </div>

        <div style="text-align: center;">
            <button class="refresh-btn" onclick="loadStats()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 4v6h-6M1 20v-6h6M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/>
                </svg>
                Rafra√Æchir
            </button>
            <p class="last-updated" id="lastUpdated"></p>
        </div>
    </div>

    <script is:inline>
        let statsData = null;
        let currentTimeframe = 'week';

        function getMiddleNumber(pagePath) {
            const match = pagePath.match(/\/cc\/\d(\d{3})\d\//);
            return match ? parseInt(match[1], 10) : 999;
        }

        function getDaysForTimeframe(timeframe) {
            switch (timeframe) {
                case 'week': return 7;
                case 'month': return 30;
                case 'year': return 365;
                case 'all': return 365;
                default: return 7;
            }
        }

        function getChartData(daily, timeframe) {
            const days = getDaysForTimeframe(timeframe);
            const today = new Date();
            const data = [];

            for (let i = days - 1; i >= 0; i--) {
                const date = new Date(today);
                date.setDate(date.getDate() - i);
                const dateStr = date.toISOString().split('T')[0];
                const dayData = daily[dateStr] || {};
                const total = Object.values(dayData).reduce((a, b) => a + b, 0);
                
                data.push({
                    date: dateStr,
                    value: total,
                    label: formatLabel(date, timeframe, i, days)
                });
            }

            // For year view, aggregate by week
            if (timeframe === 'year') {
                const weekly = [];
                for (let i = 0; i < data.length; i += 7) {
                    const weekData = data.slice(i, i + 7);
                    const sum = weekData.reduce((a, b) => a + b.value, 0);
                    const firstDate = new Date(weekData[0].date);
                    weekly.push({
                        date: weekData[0].date,
                        value: sum,
                        label: `S${Math.floor(i / 7) + 1}`
                    });
                }
                return weekly.slice(-12); // Last 12 weeks
            }

            return data;
        }

        function formatLabel(date, timeframe, index, total) {
            if (timeframe === 'week') {
                return date.toLocaleDateString('fr-FR', { weekday: 'short' });
            } else if (timeframe === 'month') {
                if (index % 5 === 0 || index === total - 1) {
                    return date.getDate().toString();
                }
                return '';
            }
            return '';
        }

        function renderLineChart(daily, timeframe) {
            const data = getChartData(daily, timeframe);
            const total = data.reduce((a, b) => a + b.value, 0);
            const maxValue = Math.max(...data.map(d => d.value), 1);
            
            const width = 800;
            const height = 200;
            const padding = { top: 30, right: 20, bottom: 40, left: 40 };
            const chartWidth = width - padding.left - padding.right;
            const chartHeight = height - padding.top - padding.bottom;

            // Generate points
            const points = data.map((d, i) => {
                const x = padding.left + (i / (data.length - 1 || 1)) * chartWidth;
                const y = padding.top + chartHeight - (d.value / maxValue) * chartHeight;
                return { x, y, ...d };
            });

            // Create path for line
            const linePath = points.map((p, i) => `${i === 0 ? 'M' : 'L'} ${p.x} ${p.y}`).join(' ');
            
            // Create path for area (filled under line)
            const areaPath = `${linePath} L ${points[points.length - 1].x} ${padding.top + chartHeight} L ${points[0].x} ${padding.top + chartHeight} Z`;

            // Grid lines (horizontal)
            const gridLines = [0, 0.25, 0.5, 0.75, 1].map(pct => {
                const y = padding.top + chartHeight * (1 - pct);
                const value = Math.round(maxValue * pct);
                return `<line class="chart-grid-line" x1="${padding.left}" y1="${y}" x2="${width - padding.right}" y2="${y}" />
                        <text class="y-axis-label" x="${padding.left - 8}" y="${y + 4}">${value}</text>`;
            }).join('');

            // X-axis labels
            const xLabels = points.map((p, i) => {
                if (data[i].label) {
                    return `<text class="chart-label" x="${p.x}" y="${height - 10}">${data[i].label}</text>`;
                }
                return '';
            }).join('');

            // Dots with values
            const dots = points.map((p, i) => {
                const showValue = data[i].value > 0 && (timeframe === 'week' || i % 3 === 0 || i === points.length - 1);
                return `
                    <circle class="chart-dot" cx="${p.x}" cy="${p.y}" r="5" />
                    ${showValue ? `<text class="chart-value-label" x="${p.x}" y="${p.y - 12}">${data[i].value}</text>` : ''}
                `;
            }).join('');

            const periodLabel = {
                'week': 'cette semaine',
                'month': 'ce mois',
                'year': 'ces 12 semaines',
                'all': 'au total'
            }[timeframe];

            return `
                <div class="chart-section">
                    <div class="chart-header">
                        <h3 class="chart-title">üìà √âvolution des clics</h3>
                        <div class="timeframe-tabs">
                            <button class="timeframe-tab ${timeframe === 'week' ? 'active' : ''}" onclick="changeTimeframe('week')">Semaine</button>
                            <button class="timeframe-tab ${timeframe === 'month' ? 'active' : ''}" onclick="changeTimeframe('month')">Mois</button>
                            <button class="timeframe-tab ${timeframe === 'year' ? 'active' : ''}" onclick="changeTimeframe('year')">Ann√©e</button>
                            <button class="timeframe-tab ${timeframe === 'all' ? 'active' : ''}" onclick="changeTimeframe('all')">Tout</button>
                        </div>
                    </div>
                    <div class="chart-container">
                        <svg class="chart-svg" viewBox="0 0 ${width} ${height}" preserveAspectRatio="xMidYMid meet">
                            <defs>
                                <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" style="stop-color:#667eea" />
                                    <stop offset="100%" style="stop-color:#764ba2" />
                                </linearGradient>
                                <linearGradient id="areaGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                                    <stop offset="0%" style="stop-color:#667eea;stop-opacity:0.3" />
                                    <stop offset="100%" style="stop-color:#667eea;stop-opacity:0" />
                                </linearGradient>
                            </defs>
                            ${gridLines}
                            <path class="chart-area" d="${areaPath}" />
                            <path class="chart-line" d="${linePath}" />
                            ${dots}
                            ${xLabels}
                        </svg>
                    </div>
                    <div class="chart-total">
                        <div class="chart-total-value">${total}</div>
                        <div class="chart-total-label">clics ${periodLabel}</div>
                    </div>
                </div>
            `;
        }

        function changeTimeframe(timeframe) {
            currentTimeframe = timeframe;
            if (statsData) {
                renderStats(statsData);
            }
        }

        function renderStats(data) {
            statsData = data;
            const content = document.getElementById('content');
            const { summary, pages, daily } = data;

            let html = `
                <div class="summary-cards">
                    <div class="card">
                        <div class="card-value">${summary.totalVisits}</div>
                        <div class="card-label">Visites totales</div>
                    </div>
                    <div class="card">
                        <div class="card-value">${summary.totalPages}</div>
                        <div class="card-label">Pages track√©es</div>
                    </div>
                </div>
            `;

            // Line Chart
            html += renderLineChart(daily, currentTimeframe);

            // Pages table
            if (pages.length > 0) {
                html += `
                    <h2 class="section-title">üìÑ D√©tail par page</h2>
                    <div class="pages-table">
                        <div class="table-header">
                            <div>Page</div>
                            <div>Visites</div>
                            <div>Derni√®re visite</div>
                        </div>
                `;

                pages.sort((a, b) => getMiddleNumber(a.page) - getMiddleNumber(b.page));

                for (const page of pages) {
                    const middleNum = getMiddleNumber(page.page).toString().padStart(3, '0');
                    html += `
                        <div class="table-row">
                            <div class="page-name">
                                <a href="${page.page}" target="_blank">${page.page}</a>
                                <span class="page-number">#${middleNum}</span>
                            </div>
                            <div class="visits-count">${page.total}</div>
                            <div class="last-visit">${page.lastVisit || '-'}</div>
                        </div>
                    `;
                }

                html += `</div>`;
            } else {
                html += `
                    <div class="empty-state">
                        <p>Aucune visite enregistr√©e pour l'instant.</p>
                        <p style="margin-top: 10px; font-size: 0.9rem;">Visite une page /cc/ pour commencer le tracking !</p>
                    </div>
                `;
            }

            content.innerHTML = html;
            document.getElementById('lastUpdated').textContent = 
                `Derni√®re mise √† jour : ${new Date().toLocaleTimeString('fr-FR')}`;
        }

        async function loadStats() {
            const content = document.getElementById('content');
            
            try {
                const response = await fetch('/api/stats');
                const data = await response.json();
                
                if (data.error) {
                    content.innerHTML = `<div class="error">‚ùå ${data.error}<br><small>${data.setup || ''}</small></div>`;
                    return;
                }

                renderStats(data);

            } catch (error) {
                content.innerHTML = `<div class="error">‚ùå Erreur de chargement<br><small>${error.message}</small></div>`;
            }
        }

        loadStats();
    </script>
</body>
</html>
