---
// Dashboard de stats pour les pages /cc/ (newsletter)
// Acc√®s: /admin/stats
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stats Newsletter - Sonny Court</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="noindex, nofollow" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif;
            background: #0d0d12;
            color: #ffffff;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 50px;
        }

        .header h1 {
            font-size: 2.2rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 8px;
        }

        .header h1 span {
            background: linear-gradient(135deg, #a78bfa 0%, #818cf8 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header p {
            color: #6b7280;
            font-size: 0.95rem;
        }

        .summary-cards {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
            margin-bottom: 32px;
        }

        .card {
            background: #16161d;
            border: 1px solid #2d2d3a;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }

        .card-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: #a78bfa;
        }

        .card-label {
            color: #6b7280;
            font-size: 0.85rem;
            margin-top: 4px;
        }

        /* Chart */
        .chart-section {
            background: #16161d;
            border: 1px solid #2d2d3a;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 32px;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 12px;
        }

        .chart-title {
            font-size: 1rem;
            font-weight: 600;
            color: #fff;
        }

        .timeframe-tabs {
            display: flex;
            gap: 4px;
            background: #0d0d12;
            padding: 4px;
            border-radius: 8px;
        }

        .timeframe-tab {
            padding: 6px 14px;
            border: none;
            background: transparent;
            color: #6b7280;
            font-size: 0.8rem;
            font-weight: 500;
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .timeframe-tab:hover {
            color: #fff;
        }

        .timeframe-tab.active {
            background: #a78bfa;
            color: #fff;
        }

        .chart-wrapper {
            width: 100%;
            overflow-x: auto;
        }

        .chart-canvas {
            width: 100%;
            min-width: 300px;
            height: 200px;
            position: relative;
        }

        .chart-bars {
            display: flex;
            align-items: flex-end;
            justify-content: space-around;
            height: 160px;
            padding: 0 10px;
            gap: 4px;
        }

        .bar-group {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            max-width: 60px;
            min-width: 30px;
        }

        .bar-value {
            font-size: 0.7rem;
            font-weight: 600;
            color: #a78bfa;
            margin-bottom: 4px;
            height: 16px;
        }

        .bar {
            width: 100%;
            max-width: 40px;
            background: linear-gradient(180deg, #a78bfa 0%, #7c3aed 100%);
            border-radius: 4px 4px 0 0;
            min-height: 4px;
            transition: all 0.3s ease;
        }

        .bar:hover {
            background: linear-gradient(180deg, #c4b5fd 0%, #a78bfa 100%);
            transform: scaleY(1.05);
            transform-origin: bottom;
        }

        .bar-label {
            font-size: 0.65rem;
            color: #6b7280;
            margin-top: 8px;
            text-align: center;
            white-space: nowrap;
        }

        .chart-summary {
            display: flex;
            justify-content: center;
            gap: 32px;
            margin-top: 20px;
            padding-top: 16px;
            border-top: 1px solid #2d2d3a;
        }

        .chart-stat {
            text-align: center;
        }

        .chart-stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #a78bfa;
        }

        .chart-stat-label {
            font-size: 0.75rem;
            color: #6b7280;
            margin-top: 2px;
        }

        /* Table */
        .section-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 16px;
            color: #fff;
        }

        .pages-table {
            background: #16161d;
            border: 1px solid #2d2d3a;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 32px;
        }

        .table-header {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            padding: 12px 16px;
            background: #1e1e28;
            font-weight: 600;
            font-size: 0.75rem;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-row {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            padding: 14px 16px;
            border-top: 1px solid #2d2d3a;
            align-items: center;
            transition: background 0.2s ease;
        }

        .table-row:hover {
            background: #1e1e28;
        }

        .page-name a {
            color: #60a5fa;
            text-decoration: none;
            font-weight: 500;
        }

        .page-name a:hover {
            color: #93c5fd;
            text-decoration: underline;
        }

        .page-number {
            color: #6b7280;
            font-size: 0.8rem;
            margin-left: 6px;
        }

        .visits-count {
            font-weight: 700;
            color: #a78bfa;
            font-size: 1.1rem;
        }

        .last-visit {
            color: #6b7280;
            font-size: 0.85rem;
        }

        /* Utils */
        .loading {
            text-align: center;
            padding: 60px;
            color: #6b7280;
        }

        .spinner {
            width: 32px;
            height: 32px;
            border: 3px solid #2d2d3a;
            border-top-color: #a78bfa;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 16px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            color: #ef4444;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #6b7280;
        }

        .refresh-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #a78bfa;
            color: #0d0d12;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 24px;
        }

        .refresh-btn:hover {
            background: #c4b5fd;
        }

        .last-updated {
            text-align: center;
            color: #6b7280;
            font-size: 0.8rem;
            margin-top: 8px;
        }

        @media (max-width: 600px) {
            body { padding: 20px 12px; }
            .header h1 { font-size: 1.6rem; }
            .card-value { font-size: 2rem; }
            .summary-cards { gap: 12px; }
            .card { padding: 16px; }
            .chart-header { flex-direction: column; align-items: stretch; }
            .timeframe-tabs { justify-content: center; }
            .table-header, .table-row { 
                grid-template-columns: 1.5fr 1fr; 
                font-size: 0.8rem;
            }
            .table-header > *:last-child, 
            .table-row > *:last-child { display: none; }
            .bar-group { min-width: 24px; }
            .bar-label { font-size: 0.6rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üìä <span>Stats Newsletter</span></h1>
            <p>Tracking des clics Court-Circuit</p>
        </div>

        <div id="content">
            <div class="loading">
                <div class="spinner"></div>
                <p>Chargement...</p>
            </div>
        </div>

        <div style="text-align: center;">
            <button class="refresh-btn" onclick="loadStats()">
                ‚Üª Rafra√Æchir
            </button>
            <p class="last-updated" id="lastUpdated"></p>
        </div>
    </div>

    <script is:inline>
        let statsData = null;
        let currentTimeframe = 'week';

        function getMiddleNumber(pagePath) {
            const match = pagePath.match(/\/cc\/\d(\d{3})\d\//);
            return match ? parseInt(match[1], 10) : 999;
        }

        function getChartData(daily, timeframe) {
            const today = new Date();
            let days, groupBy;

            switch (timeframe) {
                case 'week': days = 7; groupBy = 'day'; break;
                case 'month': days = 30; groupBy = 'day'; break;
                case 'year': days = 365; groupBy = 'month'; break;
                case 'all': days = 365; groupBy = 'month'; break;
                default: days = 7; groupBy = 'day';
            }

            if (groupBy === 'day') {
                const data = [];
                for (let i = days - 1; i >= 0; i--) {
                    const date = new Date(today);
                    date.setDate(date.getDate() - i);
                    const dateStr = date.toISOString().split('T')[0];
                    const dayData = daily[dateStr] || {};
                    const total = Object.values(dayData).reduce((a, b) => a + b, 0);
                    
                    let label = '';
                    if (timeframe === 'week') {
                        label = date.toLocaleDateString('fr-FR', { weekday: 'short' });
                    } else if (timeframe === 'month') {
                        if (i % 5 === 0 || i === 0) label = date.getDate().toString();
                    }
                    
                    data.push({ date: dateStr, value: total, label });
                }
                return data;
            } else {
                // Group by month
                const months = {};
                for (let i = days - 1; i >= 0; i--) {
                    const date = new Date(today);
                    date.setDate(date.getDate() - i);
                    const dateStr = date.toISOString().split('T')[0];
                    const monthKey = dateStr.substring(0, 7);
                    const dayData = daily[dateStr] || {};
                    const dayTotal = Object.values(dayData).reduce((a, b) => a + b, 0);
                    
                    if (!months[monthKey]) {
                        months[monthKey] = { value: 0, date: new Date(date.getFullYear(), date.getMonth(), 1) };
                    }
                    months[monthKey].value += dayTotal;
                }
                
                return Object.entries(months).map(([key, data]) => ({
                    date: key,
                    value: data.value,
                    label: data.date.toLocaleDateString('fr-FR', { month: 'short' })
                }));
            }
        }

        function renderChart(daily, timeframe) {
            const data = getChartData(daily, timeframe);
            const total = data.reduce((a, b) => a + b.value, 0);
            const maxValue = Math.max(...data.map(d => d.value), 1);
            const avg = data.length > 0 ? Math.round(total / data.length * 10) / 10 : 0;

            const bars = data.map(d => {
                const height = Math.max((d.value / maxValue) * 130, d.value > 0 ? 8 : 4);
                return `
                    <div class="bar-group">
                        <div class="bar-value">${d.value > 0 ? d.value : ''}</div>
                        <div class="bar" style="height: ${height}px" title="${d.date}: ${d.value} clics"></div>
                        <div class="bar-label">${d.label}</div>
                    </div>
                `;
            }).join('');

            const periodLabels = {
                'week': 'cette semaine',
                'month': 'ce mois',
                'year': 'cette ann√©e',
                'all': 'au total'
            };

            return `
                <div class="chart-section">
                    <div class="chart-header">
                        <div class="chart-title">üìà √âvolution des clics</div>
                        <div class="timeframe-tabs">
                            <button class="timeframe-tab ${timeframe === 'week' ? 'active' : ''}" onclick="changeTimeframe('week')">7j</button>
                            <button class="timeframe-tab ${timeframe === 'month' ? 'active' : ''}" onclick="changeTimeframe('month')">30j</button>
                            <button class="timeframe-tab ${timeframe === 'year' ? 'active' : ''}" onclick="changeTimeframe('year')">12m</button>
                            <button class="timeframe-tab ${timeframe === 'all' ? 'active' : ''}" onclick="changeTimeframe('all')">Tout</button>
                        </div>
                    </div>
                    <div class="chart-wrapper">
                        <div class="chart-canvas">
                            <div class="chart-bars">
                                ${bars}
                            </div>
                        </div>
                    </div>
                    <div class="chart-summary">
                        <div class="chart-stat">
                            <div class="chart-stat-value">${total}</div>
                            <div class="chart-stat-label">Total ${periodLabels[timeframe]}</div>
                        </div>
                        <div class="chart-stat">
                            <div class="chart-stat-value">${avg}</div>
                            <div class="chart-stat-label">Moyenne / p√©riode</div>
                        </div>
                    </div>
                </div>
            `;
        }

        function changeTimeframe(timeframe) {
            currentTimeframe = timeframe;
            if (statsData) renderStats(statsData);
        }

        function renderStats(data) {
            statsData = data;
            const content = document.getElementById('content');
            const { summary, pages, daily } = data;

            let html = `
                <div class="summary-cards">
                    <div class="card">
                        <div class="card-value">${summary.totalVisits}</div>
                        <div class="card-label">Visites totales</div>
                    </div>
                    <div class="card">
                        <div class="card-value">${summary.totalPages}</div>
                        <div class="card-label">Pages track√©es</div>
                    </div>
                </div>
            `;

            html += renderChart(daily, currentTimeframe);

            if (pages.length > 0) {
                html += `
                    <h2 class="section-title">üìÑ D√©tail par page</h2>
                    <div class="pages-table">
                        <div class="table-header">
                            <div>Page</div>
                            <div>Visites</div>
                            <div>Derni√®re visite</div>
                        </div>
                `;

                pages.sort((a, b) => getMiddleNumber(a.page) - getMiddleNumber(b.page));

                for (const page of pages) {
                    const middleNum = getMiddleNumber(page.page).toString().padStart(3, '0');
                    html += `
                        <div class="table-row">
                            <div class="page-name">
                                <a href="${page.page}" target="_blank">${page.page}</a>
                                <span class="page-number">#${middleNum}</span>
                            </div>
                            <div class="visits-count">${page.total}</div>
                            <div class="last-visit">${page.lastVisit || '-'}</div>
                        </div>
                    `;
                }
                html += `</div>`;
            } else {
                html += `<div class="empty-state"><p>Aucune visite enregistr√©e.</p></div>`;
            }

            content.innerHTML = html;
            document.getElementById('lastUpdated').textContent = 
                `Mis √† jour : ${new Date().toLocaleTimeString('fr-FR')}`;
        }

        async function loadStats() {
            const content = document.getElementById('content');
            try {
                const response = await fetch('/api/stats');
                const data = await response.json();
                if (data.error) {
                    content.innerHTML = `<div class="error">‚ùå ${data.error}</div>`;
                    return;
                }
                renderStats(data);
            } catch (error) {
                content.innerHTML = `<div class="error">‚ùå Erreur: ${error.message}</div>`;
            }
        }

        loadStats();
    </script>
</body>
</html>
