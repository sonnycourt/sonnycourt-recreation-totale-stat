---
// Page access-ssr
import GAConsentMode from '../components/GAConsentMode.astro';
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acc√®s Vid√©o Gratuite - Manifestation</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- GA4 Consent Mode v2 -->
    <GAConsentMode />
    
    <!-- intl-tel-input CSS + JS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@18.5.3/build/css/intlTelInput.css">
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@18.5.3/build/js/intlTelInput.min.js"></script>
    
    <style>
        /* Reset et base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Variables CSS pour coh√©rence */
        :root {
            --primary-purple: #6633ff;
            --secondary-purple: #9933ff;
            --accent-orange: #ff9500;
            --accent-gold: #ffcc00;
            --text-white: #ffffff;
            --text-light: rgba(255, 255, 255, 0.9);
            --glass-bg: rgba(255, 255, 255, 0.08);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: var(--text-white);
            margin: 0;
            padding: 0;
            -webkit-overflow-scrolling: touch;
        }

        /* ===== BACKGROUND ET EFFETS ===== */
        
        /* Fond d√©grad√© anim√© */
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                135deg, 
                #0a0014 0%, 
                #1a0033 20%, 
                #2d1b69 40%, 
                #1a0033 60%, 
                #0a0014 80%, 
                #000033 100%
            );
            background-size: 600% 600%;
            animation: gradientWave 12s ease infinite;
            z-index: -3;
        }

        @keyframes gradientWave {
            0%, 100% { background-position: 0% 50%; }
            25% { background-position: 50% 100%; }
            50% { background-position: 100% 50%; }
            75% { background-position: 50% 0%; }
        }

        /* Overlay avec motifs */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 20% 80%, rgba(102, 51, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(153, 51, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(184, 184, 255, 0.1) 0%, transparent 50%);
            z-index: -2;
            animation: rotateOverlay 15s linear infinite;
        }

        @keyframes rotateOverlay {
            from { transform: rotate(0deg) scale(1.5); }
            to { transform: rotate(360deg) scale(1.5); }
        }

        /* Orbes flottantes */
        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.3;
            animation: orbFloat 20s ease-in-out infinite;
            pointer-events: none;
        }

        .orb1 {
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(102, 51, 255, 0.4) 0%, transparent 70%);
            top: -150px;
            left: -150px;
            animation-duration: 25s;
        }

        .orb2 {
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(153, 51, 255, 0.3) 0%, transparent 70%);
            bottom: -200px;
            right: -200px;
            animation-duration: 30s;
            animation-delay: -5s;
        }

        @keyframes orbFloat {
            0%, 100% { transform: translate(0, 0); }
            25% { transform: translate(50px, -30px); }
            50% { transform: translate(-30px, 50px); }
            75% { transform: translate(-50px, -20px); }
        }

        /* Particules */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            animation: float 25s infinite;
            opacity: 0;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) translateX(0);
                opacity: 0;
            }
            10%, 90% {
                opacity: 0.5;
            }
            100% {
                transform: translateY(-100vh) translateX(50px);
                opacity: 0;
            }
        }

        /* ===== CONTENU PRINCIPAL ===== */
        
        .container {
            max-width: 800px;
            padding: 100px 20px 80px 20px;
            text-align: center;
            z-index: 1;
            animation: fadeIn 1.2s ease-out;
            margin: 0 auto;
            position: relative;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Titre principal */
        .context-text {
            text-align: center;
            font-size: clamp(2rem, 5vw, 4rem);
            font-weight: 200;
            letter-spacing: 4px;
            margin: 80px 0 120px;
            position: relative;
            text-transform: uppercase;
            padding: 20px 0;
            
            /* Gradient anim√© */
            background: linear-gradient(
                90deg,
                #ffffff 0%,
                #b8b8ff 25%,
                #ffffff 50%,
                #b8b8ff 75%,
                #ffffff 100%
            );
            background-size: 200% auto;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: shimmer 3s linear infinite;
        }

        .context-text::after {
            content: '';
            position: absolute;
            bottom: -30px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--primary-purple), transparent);
            animation: pulse-width 2s ease-in-out infinite;
        }

        /* ===== CARTES DE B√âN√âFICES ===== */
        
        .benefits-minimal {
            display: flex;
            justify-content: center;
            gap: 60px;
            margin: 80px 0;
            flex-wrap: nowrap;
            perspective: 1000px;
        }

        .benefit-minimal {
            text-align: center;
            padding: 50px 40px;
            border-radius: 24px;
            min-width: 280px;
            position: relative;
            isolation: isolate;
            cursor: pointer;
            transform-style: preserve-3d;
            transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
            
            /* Glassmorphism */
            background: linear-gradient(
                135deg,
                var(--glass-bg) 0%,
                rgba(255, 255, 255, 0.02) 100%
            );
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
            border: 1px solid var(--glass-border);
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            
            /* Animation d'entr√©e */
            opacity: 0;
            animation: luxury-entrance 1s cubic-bezier(0.23, 1, 0.32, 1) forwards;
        }

        .benefit-minimal:nth-child(1) { animation-delay: 0.2s; }
        .benefit-minimal:nth-child(2) { animation-delay: 0.4s; }
        .benefit-minimal:nth-child(3) { animation-delay: 0.6s; }

        .benefit-minimal:hover {
            transform: translateY(-15px) rotateX(5deg) scale(1.05);
            box-shadow: 
                0 30px 60px rgba(255, 149, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
        }

        /* Bordure lumineuse au hover */
        .benefit-minimal::before {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: 24px;
            padding: 2px;
            background: linear-gradient(
                135deg,
                var(--primary-purple),
                var(--accent-orange),
                var(--primary-purple)
            );
            -webkit-mask: 
                linear-gradient(#fff 0 0) content-box, 
                linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            opacity: 0;
            transition: opacity 0.5s ease;
            z-index: -1;
        }

        .benefit-minimal:hover::before {
            opacity: 0.8;
            animation: rotate-gradient 3s linear infinite;
        }

        /* Nombres et labels */
        .benefit-number {
            font-size: 4rem;
            font-weight: 900;
            display: block;
            margin-bottom: 20px;
            line-height: 0.9;
            letter-spacing: -2px;
            position: relative;
            
            /* Gradient m√©tallique */
            background: linear-gradient(
                135deg,
                var(--accent-gold) 0%,
                var(--accent-orange) 25%,
                var(--accent-gold) 50%,
                #ff6b00 75%,
                var(--accent-gold) 100%
            );
            background-size: 200% 200%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: gradient-shift 3s ease-in-out infinite;
            
            /* Ombre lumineuse */
            filter: drop-shadow(0 0 20px rgba(255, 149, 0, 0.5));
        }

        .benefit-label {
            font-size: 1.1rem;
            font-weight: 300;
            color: var(--text-light);
            letter-spacing: 1px;
            line-height: 1.5;
            text-transform: uppercase;
            opacity: 0.9;
        }

        /* ===== TEXTE DE R√âV√âLATION ===== */
        
        .reveal-text {
            text-align: center;
            font-size: clamp(1.2rem, 3vw, 1.8rem);
            font-weight: 400;
            letter-spacing: 2px;
            margin: 50px 0;
            position: relative;
            text-transform: uppercase;
            
            /* Gradient anim√© */
            background: linear-gradient(
                90deg,
                #ffffff 0%,
                #b8b8ff 25%,
                #ffffff 50%,
                #b8b8ff 75%,
                #ffffff 100%
            );
            background-size: 200% auto;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: shimmer 3s linear infinite;
        }

        /* ===== BOUTON CTA ===== */
        
        #optin-button {
            display: inline-block;
            padding: 20px 50px;
            font-size: 1.2rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-white);
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 50%, var(--primary-purple) 100%);
            background-size: 200% 200%;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 
                0 10px 30px rgba(102, 51, 255, 0.4),
                inset 0 0 0 2px rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
            text-decoration: none;
            animation: buttonPulse 2s ease-in-out infinite;
        }

        #optin-button::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                45deg,
                transparent 30%,
                rgba(255, 255, 255, 0.3) 50%,
                transparent 70%
            );
            transform: rotate(45deg);
            transition: all 0.6s;
            animation: buttonShine 3s ease-in-out infinite;
        }

        #optin-button:hover {
            background-position: 100% 100%;
            transform: scale(1.05);
            box-shadow: 
                0 20px 50px rgba(102, 51, 255, 0.7),
                inset 0 0 0 2px rgba(255, 255, 255, 0.3),
                0 0 80px rgba(153, 51, 255, 0.5);
            animation: none;
        }

        #optin-button:active {
            transform: scale(1.02);
        }

        /* ===== POPUP ===== */
        
        .custom-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            z-index: 9999;
            animation: fadeIn 0.3s ease-out;
            overflow-y: scroll;
            -webkit-overflow-scrolling: touch;
            overscroll-behavior: contain;
        }
        
        .popup-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: linear-gradient(135deg, #0a0014 0%, #1a0033 100%);
            border: 2px solid rgba(102, 51, 255, 0.3);
            border-radius: 20px;
            padding: 40px;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 20px 50px rgba(102, 51, 255, 0.4);
            animation: slideIn 0.4s ease-out;
            z-index: 10000;
        }

        .popup-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .popup-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-white);
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .popup-subtitle {
            color: #b8b8ff;
            font-size: 1.1rem;
        }

        .popup-close {
            position: absolute;
            top: 15px;
            right: 20px;
            background: none;
            border: none;
            color: var(--text-white);
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .popup-close:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: scale(1.1);
        }

        /* Styles pour le formulaire */
        .popup-content form {
            margin: 0;
        }

        .popup-content input[type="text"],
        .popup-content input[type="email"],
        .popup-content input[type="tel"] {
            width: 100%;
            padding: 15px;
            margin-bottom: 15px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(102, 51, 255, 0.3);
            border-radius: 10px;
            color: var(--text-white);
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .popup-content input[type="text"]::placeholder,
        .popup-content input[type="email"]::placeholder,
        .popup-content input[type="tel"]::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .popup-content input[type="text"]:focus,
        .popup-content input[type="email"]:focus,
        .popup-content input[type="tel"]:focus {
            outline: none;
            border-color: var(--primary-purple);
            box-shadow: 0 0 20px rgba(102, 51, 255, 0.3);
        }

        .popup-content button[type="submit"] {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
            border: none;
            border-radius: 10px;
            color: var(--text-white);
            font-size: 16px;
            font-weight: 700;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(102, 51, 255, 0.4);
        }

        .popup-content button[type="submit"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(102, 51, 255, 0.6);
        }

        /* ===== FOOTER ===== */
        
        .footer-info {
            text-align: center;
            font-size: 0.9rem;
            color: var(--text-light);
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
            animation: fadeIn 1.2s ease-out 0.5s both;
            margin: 60px auto 30px;
            padding: 0 20px;
        }

        /* ===== ANIMATIONS ===== */
        
        @keyframes shimmer {
            0% { background-position: -200% center; }
            100% { background-position: 200% center; }
        }

        @keyframes gradient-shift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        @keyframes rotate-gradient {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @keyframes pulse-width {
            0%, 100% { width: 100px; opacity: 0.5; }
            50% { width: 150px; opacity: 1; }
        }

        @keyframes luxury-entrance {
            0% {
                opacity: 0;
                transform: translateY(50px) scale(0.9);
                filter: blur(10px);
            }
            100% {
                opacity: 1;
                transform: translateY(0) scale(1);
                filter: blur(0);
            }
        }

        @keyframes buttonPulse {
            0%, 100% {
                transform: scale(1);
                box-shadow: 
                    0 10px 30px rgba(102, 51, 255, 0.4),
                    inset 0 0 0 2px rgba(255, 255, 255, 0.1);
            }
            50% {
                transform: scale(1.02);
                box-shadow: 
                    0 15px 40px rgba(102, 51, 255, 0.6),
                    inset 0 0 0 2px rgba(255, 255, 255, 0.2);
            }
        }

        @keyframes buttonShine {
            0% { transform: rotate(45deg) translateX(-200%); }
            100% { transform: rotate(45deg) translateX(200%); }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translate(-50%, -60%);
            }
            to {
                opacity: 1;
                transform: translate(-50%, -50%);
            }
        }

        /* ===== RESPONSIVE ===== */
        
        @media (max-width: 768px) {
            .container {
                padding: 30px 20px;
            }
            
            .context-text {
                font-size: 2rem;
                letter-spacing: 2px;
                margin: 40px 0 60px;
            }
            
            .benefits-minimal {
                gap: 40px;
                margin: 60px 0;
                flex-wrap: wrap;
            }
            
            .benefit-minimal {
                min-width: 90%;
                max-width: 400px;
                padding: 40px 30px;
            }
            
            .benefit-number {
                font-size: 3.5rem;
            }
            
            .reveal-text {
                font-size: 1.4rem;
                letter-spacing: 1px;
                margin: 40px 0 25px;
            }

            #optin-button {
                padding: 18px 40px;
                font-size: 1.1rem;
            }

            .footer-info {
                font-size: 0.8rem;
            }
        }

        /* ===== INTL-TEL-INPUT v18 - DARK THEME ===== */
        
        /* Container principal */
        .iti {
            width: 100% !important;
            margin-bottom: 15px !important;
        }
        
        /* Input t√©l√©phone */
        .iti input,
        .iti input[type="tel"],
        .iti input[type="text"] {
            width: 100% !important;
            height: 52px !important;
            padding: 15px 15px 15px 110px !important;
            background: rgba(255, 255, 255, 0.1) !important;
            border: 1px solid rgba(102, 51, 255, 0.4) !important;
            border-radius: 10px !important;
            color: #ffffff !important;
            font-size: 16px !important;
            box-sizing: border-box !important;
        }
        
        .iti input:focus {
            border-color: #6633ff !important;
            box-shadow: 0 0 20px rgba(102, 51, 255, 0.4) !important;
            outline: none !important;
        }
        
        .iti input::placeholder {
            color: rgba(255, 255, 255, 0.5) !important;
        }
        
        /* Bouton drapeau s√©lectionn√© */
        .iti__flag-container {
            height: 100% !important;
        }
        
        .iti__selected-flag {
            height: 100% !important;
            padding: 0 12px !important;
            background: rgba(102, 51, 255, 0.3) !important;
            border-radius: 10px 0 0 10px !important;
            border-right: 1px solid rgba(102, 51, 255, 0.4) !important;
        }
        
        .iti__selected-flag:hover,
        .iti__selected-flag:focus {
            background: rgba(102, 51, 255, 0.5) !important;
        }
        
        /* Indicatif */
        .iti__selected-dial-code {
            color: #ffffff !important;
            font-size: 14px !important;
            font-weight: 500 !important;
            margin-left: 8px !important;
        }
        
        /* Fl√®che */
        .iti__arrow {
            border-top: 5px solid #ffffff !important;
            border-left: 4px solid transparent !important;
            border-right: 4px solid transparent !important;
            margin-left: 8px !important;
        }
        
        .iti__arrow--up {
            border-top: none !important;
            border-bottom: 5px solid #ffffff !important;
        }
        
        /* ===== DROPDOWN - AU DESSUS DU POPUP ===== */
        .iti--container {
            z-index: 999999 !important;
        }
        
        .iti__country-list {
            background: linear-gradient(135deg, #1a0033 0%, #2d1b69 100%) !important;
            border: 2px solid rgba(102, 51, 255, 0.5) !important;
            border-radius: 12px !important;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.9), 0 0 40px rgba(102, 51, 255, 0.3) !important;
            max-height: 220px !important;
            overflow-y: auto !important;
            z-index: 999999 !important;
        }
        
        .iti__country-list::-webkit-scrollbar {
            width: 8px;
        }
        
        .iti__country-list::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.2);
            border-radius: 4px;
        }
        
        .iti__country-list::-webkit-scrollbar-thumb {
            background: rgba(102, 51, 255, 0.5);
            border-radius: 4px;
        }
        
        /* Pays dans la liste */
        .iti__country {
            padding: 12px 16px !important;
            color: #ffffff !important;
            border-bottom: 1px solid rgba(102, 51, 255, 0.2) !important;
            transition: all 0.2s ease !important;
        }
        
        .iti__country:hover,
        .iti__country.iti__highlight {
            background: rgba(102, 51, 255, 0.4) !important;
        }
        
        .iti__country-name {
            color: #ffffff !important;
            margin-right: 8px !important;
        }
        
        .iti__dial-code {
            color: rgba(255, 255, 255, 0.7) !important;
        }
        
        /* Pays pr√©f√©r√©s en haut */
        .iti__preferred {
            background: rgba(102, 51, 255, 0.15) !important;
        }
        
        .iti__divider {
            border-bottom: 1px solid rgba(102, 51, 255, 0.4) !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        
        /* Fix scroll mobile - Solution d√©finitive */
        @media (max-width: 768px) {
            .custom-popup {
                overflow-y: scroll !important;
                -webkit-overflow-scrolling: touch !important;
                overscroll-behavior: contain !important;
            }
            
            .popup-content {
                position: relative !important;
                top: auto !important;
                left: auto !important;
                transform: none !important;
                margin: 50px auto !important;
                max-width: 90% !important;
                min-height: auto !important;
            }
            
            /* FORCER le scroll mobile - Solution radicale */
            html, body {
                height: auto !important;
                overflow: visible !important;
                overflow-x: hidden !important;
                overflow-y: auto !important;
                -webkit-overflow-scrolling: touch !important;
                position: static !important;
            }
            
            .background,
            .overlay,
            .particles,
            .orb {
                pointer-events: none !important;
                position: fixed !important;
            }
            
            .container {
                transform: none !important;
                position: static !important;
                padding-bottom: 150px !important;
            }
        }
    </style>
</head>
<body>
    <!-- Arri√®re-plans et effets -->
