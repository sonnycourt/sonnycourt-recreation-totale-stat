---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Générer les chemins pour tous les articles
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout 
  title={post.data.title}
  description={post.data.description}
>
  <div class="article-page">
    <!-- Hero Section -->
    <section class="article-hero">
      <div class="container">
        <div class="article-meta">
          <span class="category-tag">{post.data.category}</span>
          <span class="date">{post.data.pubDate.toLocaleDateString('fr-FR', { day: '2-digit', month: 'long', year: 'numeric' })}</span>
          <span class="author">Par {post.data.author}</span>
        </div>
        
        <h1 class="article-title">{post.data.title}</h1>
        
        {post.data.heroImage && (
          <div class="hero-image">
            <img src={post.data.heroImage} alt={post.data.title} />
          </div>
        )}
      </div>
    </section>

    <!-- Article Content -->
    <section class="article-content">
      <div class="container">
        <div class="content-wrapper">
          <Content />
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .article-page {
    min-height: 100vh;
    padding-top: 100px;
  }

  .article-hero {
    max-width: 900px;
    margin: 0 auto;
    padding: 60px 40px 40px;
  }

  .article-meta {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
    align-items: center;
    flex-wrap: wrap;
  }

  .category-tag {
    background: rgba(0, 122, 255, 0.1);
    color: #007AFF;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
  }

  .date, .author {
    color: #8E8E93;
    font-size: 14px;
  }

  .article-title {
    font-size: clamp(32px, 6vw, 48px);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 30px;
    letter-spacing: -0.02em;
    color: #FFFFFF;
  }

  .hero-image {
    margin-top: 30px;
    border-radius: 16px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px 80px;
  }

  .content-wrapper {
    background: linear-gradient(145deg, #1C1C1E, rgba(0, 122, 255, 0.05));
    border-radius: 24px;
    padding: 60px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
  }

  /* Styles pour le contenu Markdown */
  .content-wrapper :global(h1) {
    font-size: 32px;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 24px;
    margin-top: 40px;
  }

  .content-wrapper :global(h2) {
    font-size: 24px;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 20px;
    margin-top: 32px;
  }

  .content-wrapper :global(h3) {
    font-size: 20px;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 16px;
    margin-top: 24px;
  }

  .content-wrapper :global(p) {
    font-size: 16px;
    color: #C7C7CC;
    line-height: 1.7;
    margin-bottom: 16px;
  }

  .content-wrapper :global(ul), .content-wrapper :global(ol) {
    margin-bottom: 20px;
    padding-left: 20px;
  }

  .content-wrapper :global(li) {
    font-size: 16px;
    color: #C7C7CC;
    line-height: 1.6;
    margin-bottom: 8px;
  }

  .content-wrapper :global(strong) {
    color: #FFFFFF;
    font-weight: 600;
  }

  .content-wrapper :global(em) {
    color: #8E8E93;
    font-style: italic;
  }

  .content-wrapper :global(blockquote) {
    border-left: 4px solid #007AFF;
    padding-left: 20px;
    margin: 24px 0;
    font-style: italic;
    color: #8E8E93;
  }

  .content-wrapper :global(code) {
    background: rgba(0, 122, 255, 0.1);
    color: #007AFF;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 14px;
  }

  .content-wrapper :global(pre) {
    background: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 20px 0;
  }

  .content-wrapper :global(pre code) {
    background: none;
    color: #C7C7CC;
    padding: 0;
  }

  @media (max-width: 768px) {
    .article-hero {
      padding: 40px 20px 30px;
    }

    .article-title {
      font-size: 28px;
      line-height: 1.3;
    }

    .article-content {
      padding: 0 20px 60px;
    }

    .content-wrapper {
      padding: 40px 30px;
    }

    .content-wrapper :global(h1) {
      font-size: 28px;
    }

    .content-wrapper :global(h2) {
      font-size: 22px;
    }

    .content-wrapper :global(h3) {
      font-size: 18px;
    }

    .content-wrapper :global(p), .content-wrapper :global(li) {
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    .content-wrapper {
      padding: 30px 20px;
    }

    .content-wrapper :global(h1) {
      font-size: 24px;
    }

    .content-wrapper :global(h2) {
      font-size: 20px;
    }

    .content-wrapper :global(h3) {
      font-size: 16px;
    }

    .content-wrapper :global(p), .content-wrapper :global(li) {
      font-size: 14px;
    }
  }
</style>
