    <style>
        @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
        
        /* CSS CRITIQUE - Évite le flash */
        html, body {
            background: #0a0a0a !important;
            color: #ffffff !important;
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif !important;
        }
        
        /* Masquer le contenu jusqu'au chargement complet */
        .page-content {
            opacity: 0;
            transition: opacity 0.3s ease-in;
        }
        
        .page-content.loaded {
            opacity: 1;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
            background: #0a0a0a;
            color: #ffffff;
            overflow-x: hidden;
        }

        /* Section Hero principale */
        .hero-section {
            position: relative;
            min-height: 100vh;
            background: linear-gradient(180deg, #0a0a0a 0%, #1a0f2e 100%);
            padding: 40px 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Titre principal avec police Bebas Neue */
        .main-title {
            text-align: center;
            margin-bottom: 30px;
            animation: fadeInDown 1s ease-out;
            padding: 0 20px;
        }

        .main-title h1 {
            font-family: 'Bebas Neue', cursive;
            font-size: clamp(3rem, 6vw, 5rem);
            font-weight: 400;
            letter-spacing: 0.03em;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-transform: uppercase;
            text-align: center;
            line-height: 1.1;
        }

        /* Style pour les trois points collés à "facilement" */
        .main-title h1 .dots {
            margin-left: -0.1em;
        }

        /* Animation du gradient */
        @keyframes gradient-move {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }

        .subtitle {
            font-size: clamp(16px, 2.5vw, 22px);
            color: #ffffff;
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInUp 1s ease-out 0.2s both;
            font-weight: 500;
            letter-spacing: 0.01em;
        }

        /* Widget Audio Premium */
        .premium-audio-container {
            position: relative;
            padding: 40px 20px;
            margin: 0 auto 60px;
            max-width: 100%;
            overflow: hidden;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            animation: fadeInUp 1s ease-out 0.4s both;
        }
        
        .premium-audio-box {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(124, 58, 237, 0.05) 100%);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(102, 126, 234, 0.15);
            border-radius: 24px;
            padding: 32px 48px;
            position: relative;
            display: inline-block;
            box-shadow: 
                0 20px 40px -10px rgba(102, 126, 234, 0.15),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset,
                0 10px 20px -5px rgba(0, 0, 0, 0.1);
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            will-change: transform;
        }
        
        .premium-audio-box:hover {
            transform: translateY(-2px) scale(1.02);
            box-shadow: 
                0 30px 60px -15px rgba(102, 126, 234, 0.25),
                0 0 0 1px rgba(255, 255, 255, 0.2) inset,
                0 15px 30px -10px rgba(0, 0, 0, 0.15);
        }
        
        .premium-audio-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(255, 255, 255, 0.5) 50%, 
                transparent 100%);
            opacity: 0.6;
        }
        
        .audio-main-content {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 16px;
            position: relative;
            z-index: 2;
        }
        
        .audio-icon-wrapper {
            position: relative;
            width: 48px;
            height: 48px;
            flex-shrink: 0;
        }
        
        .audio-icon-bg {
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            opacity: 0.1;
            transition: all 0.3s ease;
        }
        
        .premium-audio-box:hover .audio-icon-bg {
            opacity: 0.15;
            transform: scale(1.1);
        }
        
        .audio-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #667eea;
        }
        
        .audio-icon svg {
            width: 28px;
            height: 28px;
            filter: drop-shadow(0 2px 4px rgba(102, 126, 234, 0.3));
        }
        
        .audio-text-content {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
            font-size: 24px;
            font-weight: 600;
            color: #e5e5ea;
            letter-spacing: -0.02em;
            line-height: 1.2;
            margin: 0;
            position: relative;
        }
        
        .hours-premium {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
            font-size: 26px;
            display: inline-block;
            position: relative;
        }
        
        .hours-premium::after {
            content: attr(data-text);
            position: absolute;
            left: 0;
            top: 0;
            z-index: -1;
            background: inherit;
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: blur(10px);
            opacity: 0.5;
        }
        
        .audio-badge {
            position: absolute;
            top: -12px;
            right: -12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 11px;
            font-weight: 700;
            padding: 4px 12px;
            border-radius: 20px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.05); opacity: 0.9; }
        }

        /* Image de couverture */
        .cover-image-container {
            position: relative;
            max-width: 800px;
            margin: 0 auto 60px;
            animation: fadeInUp 1s ease-out 0.6s both;
        }

        .cover-image {
            width: 100%;
            height: auto;
            border-radius: 20px;
            box-shadow: 
                0 30px 60px -20px rgba(102, 126, 234, 0.4),
                0 20px 40px -10px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .cover-image:hover {
            transform: scale(1.02);
        }

        /* Premium Method Container */
        .premium-method-container {
            position: relative;
            padding: 48px 40px;
            margin: 40px auto;
            max-width: 800px;
            background: linear-gradient(135deg, rgba(20, 20, 22, 0.95) 0%, rgba(30, 30, 35, 0.98) 100%);
            backdrop-filter: blur(30px);
            -webkit-backdrop-filter: blur(30px);
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 32px;
            text-align: center;
            box-shadow: 
                0 30px 60px -15px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.05) inset,
                0 20px 40px -10px rgba(102, 126, 234, 0.2);
            overflow: hidden;
            transform: translateZ(0);
            transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
            animation: fadeInScale 0.8s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
        }

        .premium-method-container:hover {
            transform: translateY(-3px);
            box-shadow: 
                0 40px 80px -20px rgba(0, 0, 0, 0.6),
                0 0 0 1px rgba(255, 255, 255, 0.08) inset,
                0 30px 60px -15px rgba(102, 126, 234, 0.3);
        }

        .premium-method-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
            height: 1px;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(102, 126, 234, 0.6) 50%, 
                transparent 100%);
        }

        .method-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(40px);
            opacity: 0.3;
            animation: floatOrb 20s infinite ease-in-out;
        }

        .method-orb-1 {
            top: -50px;
            right: -50px;
            width: 150px;
            height: 150px;
            background: radial-gradient(circle, #667eea 0%, transparent 70%);
            animation-delay: 0s;
        }

        .method-orb-2 {
            bottom: -30px;
            left: -30px;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, #764ba2 0%, transparent 70%);
            animation-delay: 10s;
        }

        @keyframes floatOrb {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(20px, -20px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
        }

        .method-headline {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
            font-size: 22px;
            line-height: 1.4;
            color: #e5e5ea;
            margin-bottom: 24px;
            font-weight: 400;
            letter-spacing: -0.02em;
            position: relative;
            z-index: 2;
        }

        .method-highlight {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            display: inline-block;
            position: relative;
        }

        .method-description {
            font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
            font-size: 20px;
            line-height: 1.6;
            color: #a5a5aa;
            font-weight: 500;
            margin-bottom: 32px;
            position: relative;
            z-index: 2;
        }

        .method-emphasis {
            color: #e5e5ea;
            font-weight: 600;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: inline-block;
        }

        .method-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(124, 58, 237, 0.05) 100%);
            backdrop-filter: blur(10px);
            color: #e5e5ea;
            padding: 12px 28px;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            border: 1px solid rgba(102, 126, 234, 0.15);
            position: relative;
            z-index: 2;
            transition: all 0.3s ease;
            box-shadow: 
                0 4px 15px rgba(102, 126, 234, 0.2),
                0 0 20px rgba(102, 126, 234, 0.1) inset;
        }

        .method-badge:hover {
            transform: translateY(-2px);
            box-shadow: 
                0 6px 25px rgba(102, 126, 234, 0.3),
                0 0 30px rgba(102, 126, 234, 0.15) inset;
            border-color: rgba(102, 126, 234, 0.5);
        }

        .method-particles {
            position: absolute;
            inset: 0;
            overflow: hidden;
            pointer-events: none;
        }

        .method-particle {
            position: absolute;
            width: 1px;
            height: 1px;
            background: #667eea;
            box-shadow: 0 0 4px #667eea;
            border-radius: 50%;
            opacity: 0;
            animation: sparkle 4s infinite;
        }

        .method-particle:nth-child(1) { left: 20%; top: 20%; animation-delay: 0s; }
        .method-particle:nth-child(2) { left: 80%; top: 30%; animation-delay: 0.5s; }
        .method-particle:nth-child(3) { left: 60%; top: 80%; animation-delay: 1s; }
        .method-particle:nth-child(4) { left: 30%; top: 70%; animation-delay: 1.5s; }
        .method-particle:nth-child(5) { left: 50%; top: 50%; animation-delay: 2s; }

        @keyframes sparkle {
            0%, 100% { opacity: 0; transform: scale(0); }
            50% { opacity: 1; transform: scale(1); }
        }

        @keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.95);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Section CTA */
        .cta-section {
            text-align: center;
            padding: 60px 20px;
            animation: fadeInUp 1s ease-out 1s both;
        }

        .cta-button {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px 48px;
            font-size: 20px;
            font-weight: 700;
            text-decoration: none;
            border-radius: 60px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
            box-shadow: 
                0 20px 40px -10px rgba(102, 126, 234, 0.5),
                0 10px 25px -5px rgba(124, 58, 237, 0.3),
                0 0 60px rgba(102, 126, 234, 0.2) inset;
            position: relative;
            overflow: hidden;
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .cta-button:hover::before {
            left: 100%;
        }

        .cta-button:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 
                0 25px 50px -12px rgba(102, 126, 234, 0.6),
                0 15px 30px -7px rgba(124, 58, 237, 0.4),
                0 0 80px rgba(102, 126, 234, 0.3) inset;
        }

        .cta-icon {
            font-size: 24px;
            animation: sparkleIcon 2s infinite;
        }

        @keyframes sparkleIcon {
            0%, 100% { transform: scale(1) rotate(0deg); }
            50% { transform: scale(1.2) rotate(5deg); }
        }

        .cta-text {
            position: relative;
            z-index: 1;
        }

        .guarantee-text {
            margin-top: 20px;
            font-size: 16px;
            color: #a0a0a0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            animation: fadeIn 1s ease-out 1.3s both;
        }

        .checkmark {
            color: #4ade80;
            font-size: 18px;
            font-weight: bold;
        }

        /* Styles personnalisés pour le bouton de la section Présentation */
        .cta-section-custom {
            margin: 60px 0 15px 0;
        }

        .guarantee-text-custom {
            margin-top: 20px;
            margin-bottom: 0;
            font-size: 16px;
            color: #a0a0a0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            animation: fadeIn 1s ease-out 1.3s both;
        }

        .guarantee-text-black {
            margin-top: 20px;
            font-size: 16px;
            color: #000000;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            animation: fadeIn 1s ease-out 1.3s both;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Section Compte à Rebours */
        .countdown-banner {
            background: linear-gradient(135deg, rgba(20, 20, 22, 0.98) 0%, rgba(30, 20, 45, 0.95) 100%);
            border-radius: 20px;
            padding: 40px;
            max-width: 1000px;
            margin: 60px auto;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(102, 126, 234, 0.2);
            animation: fadeInUp 1s ease-out 1.2s both;
        }

        .countdown-header {
            margin-bottom: 30px;
            z-index: 1;
            position: relative;
        }

        .discount-badge {
            display: inline-block;
            background: #ef4444;
            color: white;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 700;
            font-size: 1.1rem;
            margin-bottom: 20px;
            animation: pulse 2s infinite;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .countdown-title {
            color: #ffffff;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .countdown-subtitle {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.2rem;
            margin-bottom: 25px;
        }

        .countdown-section {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 30px;
            z-index: 1;
            position: relative;
        }

        .time-block {
            text-align: center;
            background: rgba(106, 90, 205, 0.1);
            border-radius: 15px;
            padding: 20px 15px;
            min-width: 90px;
            flex: 1;
            max-width: 120px;
        }

        .time-value {
            background: rgba(106, 90, 205, 0.2);
            border: 2px solid #6A5ACD;
            border-radius: 12px;
            padding: 15px 10px;
            font-size: 2.2rem;
            font-weight: 700;
            color: #ffffff;
            display: block;
            font-variant-numeric: tabular-nums;
            margin-bottom: 8px;
        }

        .time-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }

        .time-separator {
            color: #6A5ACD;
            font-size: 2rem;
            font-weight: 700;
            align-self: center;
            margin: 0 5px;
        }

        .scarcity-section {
            margin-bottom: 30px;
            z-index: 1;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 16px;
        }

        .scarcity-text {
            color: #ffffff;
            font-size: 1rem;
            font-weight: 500;
            margin-bottom: 0;
        }

        #places {
            color: #ef4444;
            font-weight: 700;
            font-size: 1.4rem;
            animation: scarcityPulse 3s infinite;
        }

        .scarcity-text.sold-out {
            text-decoration: line-through;
            text-decoration-thickness: 2px;
            opacity: 0.6;
            color: rgba(255, 255, 255, 0.6);
        }

        .exceptional-offer {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 12px 25px;
            border-radius: 30px;
            display: inline-block;
