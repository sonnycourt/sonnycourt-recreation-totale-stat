            let timeText;
            if (minutesAgo < 1) {
                timeText = 'À l\'instant';
            } else if (minutesAgo < 60) {
                timeText = `Il y a ${Math.floor(minutesAgo)} minute${minutesAgo >= 2 ? 's' : ''}`;
            } else {
                const hours = Math.floor(minutesAgo / 60);
                timeText = `Il y a ${hours} heure${hours >= 2 ? 's' : ''}`;
