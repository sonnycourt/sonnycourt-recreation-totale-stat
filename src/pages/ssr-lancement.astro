            if (timeRemaining <= 0) {
                // Vérifier si on est en mode preview (via l'URL ou la variable globale)
                const urlParams = new URLSearchParams(window.location.search);
                const isPreviewMode = urlParams.has('preview');
                const testRedirect = urlParams.has('test-redirect');
                
                // Rediriger vers la page backup si ce n'est pas en mode preview, ou si test-redirect est activé
                if (!isPreviewMode || testRedirect) {
                    window.location.href = '/fin-ssr-lancement';
                    return;
                }
                
                // En mode preview, afficher le message "portes fermées"
                showDoorsClosedMessage();
                if (countdownInterval) clearInterval(countdownInterval);
                return;
            }
            
            const days = Math.floor(timeRemaining / (24 * 60 * 60));
            const hours = Math.floor((timeRemaining % (24 * 60 * 60)) / (60 * 60));
            const minutes = Math.floor((timeRemaining % (60 * 60)) / 60);
            const seconds = Math.floor(timeRemaining % 60);

            const daysEl = document.getElementById('days');
            const hoursEl = document.getElementById('hours');
            const minutesEl = document.getElementById('minutes');
            const secondsEl = document.getElementById('seconds');

            if (daysEl) daysEl.textContent = days.toString().padStart(2, '0');
            if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, '0');
            if (minutesEl) minutesEl.textContent = minutes.toString().padStart(2, '0');
            if (secondsEl) secondsEl.textContent = seconds.toString().padStart(2, '0');

            // Animation rouge si moins d'un jour
            if (days === 0) {
                document.querySelectorAll('.time-value').forEach(el => {
                    (el as HTMLElement).style.borderColor = '#ef4444';
                    (el as HTMLElement).style.color = '#ef4444';
                });
                const discountBadge = document.querySelector('.discount-badge') as HTMLElement;
                if (discountBadge) discountBadge.style.animation = 'pulse 1s infinite';
            }
        }

        // Initialisation et boucle de mise à jour
        async function initSSRCountdown() {
            ssrData = await checkSSRToken();

            if (!ssrData) {
                // Mode dégradé ou redirection déjà effectuée
                return;
            }

            // Affichage initial
            updateCountdownDisplay(ssrData.timeRemaining);
            updateScarcityDisplay(ssrData);
            
            // Démarrer le système de notifications d'achat
            startNotificationSystem(ssrData);

            // Stocker le temps restant initial pour le décompte local
            let localTimeRemaining = ssrData.timeRemaining;

            // Mise à jour chaque seconde
            countdownInterval = setInterval(() => {
                localTimeRemaining--;
                updateCountdownDisplay(localTimeRemaining);
            }, 1000);

            // Rafraîchir les données depuis le serveur toutes les 5 minutes (sauf en mode preview)
            if (!isPreviewMode) {
                setInterval(async () => {
                    const freshData = await checkSSRToken();
                    if (freshData) {
                        ssrData = freshData;
                        localTimeRemaining = freshData.timeRemaining;
                        updateScarcityDisplay(freshData);
                    }
                }, 5 * 60 * 1000);
            }
        }

        // Attendre que le DOM soit chargé
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initSSRCountdown);
        } else {
            initSSRCountdown();
        }

