        // Calculer les achats récents basés sur les places vendues
        function calculateRecentPurchases(currentPlaces, phase) {
            const purchases = [];
            
            // Le prospect arrive en plein milieu d'un "lancement collectif"
            // Phase 1 : 300 places initiales → X restantes = (300-X) vendues
            // Phase 2 : 200 places exceptionnelles → X restantes = (200-X) vendues
            const initialPlaces = phase === 2 ? 200 : 300;
            
            // Nombre de places vendues
            const placesSold = initialPlaces - currentPlaces;
            
            if (placesSold <= 0) return purchases;
            
            // Générer des notifications pour les derniers achats (max 8)
            const numNotifications = Math.min(8, Math.max(3, Math.floor(placesSold / 10)));
            
            for (let i = 0; i < numNotifications; i++) {
                // Timestamps fictifs : de 2 minutes à 2 heures
                const minutesAgo = 2 + (i * 15) + Math.floor(Math.random() * 10);
                purchases.push({
                    personne: getRandomPersonne(),
                    minutesAgo: minutesAgo
                });
            }
            
            // Trier par temps (plus récent en premier)
            purchases.sort((a, b) => a.minutesAgo - b.minutesAgo);
            
            return purchases;
        }

        // Démarrer le système de notifications
        let notificationQueue = [];
        let notificationInterval = null;

        function startNotificationSystem(data) {
            if (!data || data.isExpired || (data.isSoldOut && !data.isReopened)) return;
            
            createNotificationContainer();
            
            // Calculer les achats récents basés sur les places actuelles
            notificationQueue = calculateRecentPurchases(data.places, data.phase);
            
            if (notificationQueue.length === 0) return;
            
            // Afficher la première notification après 5 secondes
            setTimeout(() => {
                showNextNotification();
                
                // Puis afficher une notification toutes les 30-60 secondes
                notificationInterval = setInterval(() => {
                    showNextNotification();
                }, 30000 + Math.random() * 30000);
            }, 5000);
        }

        function showNextNotification() {
            if (notificationQueue.length === 0) {
                // Recharger la queue avec de nouvelles personnes
                if (ssrData) {
                    notificationQueue = calculateRecentPurchases(ssrData.places, ssrData.phase);
                }
                if (notificationQueue.length === 0) return;
            }
            
            const purchase = notificationQueue.shift();
            showPurchaseNotification(purchase.personne, purchase.minutesAgo);
        }

