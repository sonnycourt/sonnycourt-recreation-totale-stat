                    startCountdown();
                }
            });

            // Mettre en pause le compteur quand la vidéo est en pause
            videoPlayer.addEventListener('pause', () => {
                playOverlay.classList.remove('hidden');
                pauseCountdown();
            });

            // Suivre le temps de lecture réel
            videoPlayer.addEventListener('timeupdate', () => {
                if (!videoPlayer.paused) {
                    totalPlayTime = videoPlayer.currentTime;
                }
            });

            // Gérer la fin de la vidéo
            videoPlayer.addEventListener('ended', () => {
                // Si la vidéo se termine avant 13 minutes, activer le bouton
                if (timeRemaining > 0) {
                    timeRemaining = 0;
                    updateCountdown();
                    if (ctaButton) {
                        ctaButton.classList.remove('disabled');
                    }
                }
            });
        } else {
            // Fallback si le lecteur vidéo n'est pas trouvé
            updateCountdown();
            countdownInterval = setInterval(updateCountdown, 1000);
        }
    </script>
