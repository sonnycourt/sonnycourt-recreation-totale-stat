        // Configuration des dates
        const startDate = new Date('2025-08-05T18:00:00').getTime();
        const transitionDate = new Date('2025-08-22T23:00:00').getTime();
        const phase2EndDate = new Date('2025-09-02T00:00:00').getTime(); // Nouvelle transition
        const endDate = new Date('2025-09-04T22:00:00').getTime();
        
        let lastPhase1Places = 3;
        let lastPhase2Places = 178;
        let lastPhase3Places = 15;
        
        // Fonction pour calculer les places disponibles
        const calculatePlaces = () => {
            const now = new Date().getTime();
            
            // PHASE 1
            if (now < transitionDate) {
                const nowAt21Aug = new Date('2025-08-21T17:00:00').getTime();
                
                if (now < nowAt21Aug) {
                    const hoursElapsed = (now - startDate) / (1000 * 60 * 60);
                    const phase1TotalHours = (nowAt21Aug - startDate) / (1000 * 60 * 60);
                    const progress = hoursElapsed / phase1TotalHours;
                    const adjustedProgress = Math.pow(progress, 0.7);
                    let currentPlaces = Math.floor(278 * (1 - adjustedProgress));
                    
                    if (currentPlaces < 3) currentPlaces = 3;
                    
                    return { phase: 1, places: currentPlaces };
                } else {
                    const hoursElapsedFromNow = (now - nowAt21Aug) / (1000 * 60 * 60);
                    
                    if (hoursElapsedFromNow < 8) {
                        return { phase: 1, places: 3 };
                    } else if (hoursElapsedFromNow < 20) {
                        return { phase: 1, places: 2 };
                    } else if (hoursElapsedFromNow < 28) {
                        return { phase: 1, places: 1 };
                    } else {
                        return { phase: 1, places: 0 };
                    }
                }
            }
            // PHASE 2 (22 août → 2 septembre) - Décroissance lente vers 15 places
            else if (now < phase2EndDate) {
                const hoursElapsed = (now - transitionDate) / (1000 * 60 * 60);
                const phase2TotalHours = (phase2EndDate - transitionDate) / (1000 * 60 * 60);
                const progress = hoursElapsed / phase2TotalHours;
                const adjustedProgress = Math.pow(progress, 0.76); // Calibré pour ~32 places le 31/08
                
                // Décroissance de 178 → 15 sur toute la phase 2
                let currentPlaces = Math.floor(15 + (178 - 15) * (1 - adjustedProgress));
                
                if (currentPlaces > lastPhase2Places) {
                    currentPlaces = lastPhase2Places;
                }
                
                lastPhase2Places = currentPlaces;
                return { phase: 2, places: currentPlaces };
            }
            // PHASE 3 (2 septembre → 4 septembre) - Décroissance rapide de 15 à 0
            else if (now < endDate) {
                const hoursElapsed = (now - phase2EndDate) / (1000 * 60 * 60);
                const phase3TotalHours = (endDate - phase2EndDate) / (1000 * 60 * 60);
                const progress = hoursElapsed / phase3TotalHours;
                const adjustedProgress = Math.pow(progress, 0.6); // Décroissance rapide
                
                let currentPlaces = Math.floor(15 * (1 - adjustedProgress));
                
                if (currentPlaces > lastPhase3Places) {
                    currentPlaces = lastPhase3Places;
                }
                
                lastPhase3Places = currentPlaces;
                return { phase: 3, places: currentPlaces };
            }
            
            return { phase: 'ended', places: 0 };
        };
        
        // Mise à jour de l'affichage selon la phase
        const updateScarcityDisplay = (phaseData) => {
            const scarcityText = document.getElementById('scarcityText');
            const placesSpan = document.getElementById('places');
            const exceptionalOffer = document.getElementById('exceptionalOffer');
            const exceptionalPlaces = document.getElementById('exceptionalPlaces');

            if (!scarcityText || !placesSpan || !exceptionalOffer || !exceptionalPlaces) return;

            if (phaseData.phase === 1) {
                // Phase 1: places restantes classiques
                scarcityText.classList.remove('sold-out');
                scarcityText.innerHTML = `<span class="places-count" id="places">${phaseData.places}</span> places disponibles sur 300`;
                exceptionalOffer.style.display = 'none';

                if (phaseData.places <= 3) {
                    const placesElement = document.getElementById('places');
                    if (placesElement) {
                        placesElement.style.fontSize = '1.75rem';
                        placesElement.style.animation = 'urgentPulse 0.8s infinite';
                    }
                }
            } else if (phaseData.phase === 2) {
                // Phase 2: sold-out + places exceptionnelles
                scarcityText.classList.add('sold-out');
                scarcityText.innerHTML = `<span style="color: #ef4444;">0</span> places disponibles sur 300`;
                exceptionalOffer.style.display = 'inline-block';
                exceptionalPlaces.textContent = String(phaseData.places);

                if (phaseData.places < 30) {
                    exceptionalPlaces.style.animation = 'urgentPulse 0.5s infinite';
                } else {
                    exceptionalPlaces.style.animation = '';
                }
            } else if (phaseData.phase === 3) {
                // Phase 3: sold-out + places exceptionnelles (décroissance rapide)
                scarcityText.classList.add('sold-out');
                scarcityText.innerHTML = `<span style="color: #ef4444;">0</span> places disponibles sur 300`;
                exceptionalOffer.style.display = 'inline-block';
                exceptionalPlaces.textContent = String(phaseData.places);

                // Animation plus urgente pour la Phase 3
                exceptionalPlaces.style.animation = 'urgentPulse 0.3s infinite';
            } else {
                // Phase ended
                scarcityText.classList.add('sold-out');
                scarcityText.textContent = `L'offre est complètement terminée`;
                exceptionalOffer.style.display = 'none';
            }
        };
        
        // Mise à jour du compte à rebours
        const updateCountdown = () => {
            const now = new Date().getTime();
            const distance = endDate - now;
            
            if (distance < 0) {
                document.querySelector('.countdown-banner').innerHTML = '<h2 style="color: #ef4444; text-align: center; font-size: 2rem;">L\'offre -50% est terminée</h2>';
                return;
            }
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById('days').textContent = days.toString().padStart(2, '0');
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            
            const phaseData = calculatePlaces();
            updateScarcityDisplay(phaseData);
            
            if (days === 0) {
                document.querySelectorAll('.time-value').forEach(el => {
                    el.style.borderColor = '#ef4444';
                    el.style.color = '#ef4444';
                });
                document.querySelector('.discount-badge').style.animation = 'pulse 1s infinite';
            }
        };
        
        // Attendre que le DOM soit chargé avant de démarrer le compte à rebours
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                updateCountdown();
                setInterval(updateCountdown, 1000);
            });
        } else {
            updateCountdown();
            setInterval(updateCountdown, 1000);
        }

        // Créer les particules pour la section témoignages
