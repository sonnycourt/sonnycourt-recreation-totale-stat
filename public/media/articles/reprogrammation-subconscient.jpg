<svg width="400" height="200" viewBox="0 0 400 200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#16213e;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="glow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#007AFF;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#007AFF;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="200" fill="url(#bg)"/>
  
  <!-- Glow effect -->
  <circle cx="200" cy="100" r="80" fill="url(#glow)"/>
  
  <!-- Brain/Neural network pattern -->
  <g stroke="#007AFF" stroke-width="2" fill="none" opacity="0.6">
    <!-- Central nodes -->
    <circle cx="200" cy="100" r="3" fill="#007AFF"/>
    <circle cx="150" cy="80" r="2" fill="#007AFF"/>
    <circle cx="250" cy="80" r="2" fill="#007AFF"/>
    <circle cx="150" cy="120" r="2" fill="#007AFF"/>
    <circle cx="250" cy="120" r="2" fill="#007AFF"/>
    <circle cx="180" cy="60" r="2" fill="#007AFF"/>
    <circle cx="220" cy="60" r="2" fill="#007AFF"/>
    <circle cx="180" cy="140" r="2" fill="#007AFF"/>
    <circle cx="220" cy="140" r="2" fill="#007AFF"/>
    
    <!-- Connections -->
    <line x1="200" y1="100" x2="150" y2="80"/>
    <line x1="200" y1="100" x2="250" y2="80"/>
    <line x1="200" y1="100" x2="150" y2="120"/>
    <line x1="200" y1="100" x2="250" y2="120"/>
    <line x1="150" y1="80" x2="180" y2="60"/>
    <line x1="250" y1="80" x2="220" y2="60"/>
    <line x1="150" y1="120" x2="180" y2="140"/>
    <line x1="250" y1="120" x2="220" y2="140"/>
  </g>
  
  <!-- Text overlay -->
  <text x="200" y="180" text-anchor="middle" fill="#FFFFFF" font-family="Arial, sans-serif" font-size="14" font-weight="bold">
    REPROGRAMMATION SUBCONSCIENTE
  </text>
</svg>
